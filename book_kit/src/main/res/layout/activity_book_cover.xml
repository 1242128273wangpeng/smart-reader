<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/book_cover_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_view_height_48"
        android:layout_alignParentTop="true"
        android:background="@color/theme_primary">

        <ImageView
            android:id="@+id/book_cover_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_padding_12"
            android:paddingRight="@dimen/dimen_padding_12"
            android:src="@drawable/icon_back_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/book_cover"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_text_17" />

        <include
            layout="@layout/layout_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/book_cover_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/book_cover_head">

        <ScrollView
            android:id="@+id/book_cover_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin_15">

                <ImageView
                    android:id="@+id/book_cover_image"
                    android:layout_width="@dimen/dimen_view_width_74"
                    android:layout_height="@dimen/dimen_view_height_98"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dimen_margin_12"
                    android:background="@drawable/icon_book_cover_default"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_98"
                    android:layout_marginLeft="@dimen/dimen_margin_16"
                    android:layout_marginRight="@dimen/dimen_margin_12"
                    android:layout_toRightOf="@id/book_cover_image"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/book_cover_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/color_black_2e2e2e"
                            android:textSize="@dimen/dimen_text_15" />

                        <TextView
                            android:id="@+id/book_cover_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_margin_5"
                            android:layout_marginRight="@dimen/dimen_margin_5"
                            android:layout_toRightOf="@id/book_cover_title"
                            android:text="@string/book_cover_connect"
                            android:textColor="@color/color_black_2e2e2e"
                            android:textSize="@dimen/dimen_text_15"/>

                        <TextView
                            android:id="@+id/book_cover_author"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/book_cover_connect"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/color_gray_696969"
                            android:textSize="@dimen/dimen_text_13" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/book_cover_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cover_book_category"
                            android:textColor="@color/color_gray_696969"
                            android:textSize="@dimen/dimen_text_13" />

                        <TextView
                            android:id="@+id/book_cover_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/color_gray_696969"
                            android:textSize="@dimen/dimen_text_13" />

                        <TextView
                            android:id="@+id/book_cover_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_margin_10"
                            android:layout_toRightOf="@id/book_cover_title"
                            android:text="@string/app_name"
                            android:textColor="@color/color_black_2e2e2e"
                            android:textSize="@dimen/dimen_text_13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/book_cover_source_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/color_white_eeeeee">

                        <TextView
                            android:id="@+id/book_cover_source"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_padding_5"
                            android:paddingRight="@dimen/dimen_padding_5"
                            android:text="@string/book_cover_source"
                            android:textColor="@color/color_black_2e2e2e"
                            android:textSize="@dimen/dimen_text_13"/>


                        <TextView
                            android:id="@+id/book_cover_source_form"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:drawableRight="@drawable/icon_open_answer"
                            android:paddingLeft="@dimen/dimen_padding_5"
                            android:paddingRight="@dimen/dimen_padding_5"
                            android:text="@string/book_cover_no_source"
                            android:textColor="@color/color_black_2e2e2e"
                            android:textSize="@dimen/dimen_text_13"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/book_cover_selector_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_50"
                    android:layout_below="@id/book_cover_image"
                    android:layout_marginLeft="@dimen/dimen_margin_12"
                    android:layout_marginRight="@dimen/dimen_margin_12"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/book_cover_bookshelf_view"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_margin_6"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/book_cover_bookshelf"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_height_35"
                            android:layout_centerInParent="true"
                            android:background="@drawable/background_book_cover_button"
                            android:gravity="center"
                            android:text="@string/app_name"
                            android:textColor="@color/selector_text_theme_white"
                            android:textSize="@dimen/dimen_text_14" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book_cover_reading_view"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_margin_6"
                        android:layout_marginRight="@dimen/dimen_margin_6"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/book_cover_reading"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_height_35"
                            android:layout_centerInParent="true"
                            android:background="@drawable/background_book_cover_button"
                            android:gravity="center"
                            android:text="@string/book_cover_reading"
                            android:textColor="@color/selector_text_theme_white"
                            android:textSize="@dimen/dimen_text_14" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book_cover_download_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_margin_6"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/book_cover_download"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_height_35"
                            android:layout_centerInParent="true"
                            android:background="@drawable/background_book_cover_button"
                            android:gravity="center"
                            android:text="@string/app_name"
                            android:textColor="@color/selector_text_theme_white"
                            android:textSize="@dimen/dimen_text_14" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/book_cover_introduction_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/book_cover_selector_view"
                    android:layout_marginLeft="@dimen/dimen_margin_12"
                    android:layout_marginRight="@dimen/dimen_margin_12">

                    <TextView
                        android:id="@+id/book_cover_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_margin_5"
                        android:layout_marginTop="@dimen/dimen_margin_5"
                        android:gravity="center"
                        android:text="@string/book_cover_introduction"
                        android:textColor="@color/color_black_2e2e2e"
                        android:textSize="@dimen/dimen_text_16" />

                    <net.lzbook.kit.book.view.ExpandableTextView
                        android:id="@+id/book_cover_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/book_cover_introduction"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        expandableTextView:animAlphaStart="1"
                        expandableTextView:maxCollapsedLines="3">

                        <TextView
                            android:id="@+id/expandable_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingLeft="16dp"
                            android:paddingTop="5dp"
                            android:paddingRight="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_gray_9c9c9c"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/expand_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@android:color/transparent" />
                    </net.lzbook.kit.book.view.ExpandableTextView>

                </RelativeLayout>

                <include layout="@layout/layout_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_0.5"
                    android:layout_above="@+id/book_cover_chapter_view"/>

                <LinearLayout
                    android:id="@+id/book_cover_chapter_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_48"
                    android:layout_below="@id/book_cover_introduction_view"
                    android:paddingLeft="@dimen/dimen_padding_12"
                    android:paddingRight="@dimen/dimen_padding_12"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_cover_last_chapter"
                        android:textColor="@color/color_gray_696969"
                        android:textSize="@dimen/dimen_text_13" />

                    <TextView
                        android:id="@+id/book_cover_last_chapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/color_gray_696969"
                        android:textSize="@dimen/dimen_text_13" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/book_cover_catalog_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_40"
                    android:layout_below="@id/book_cover_chapter_view"
                    android:background="@drawable/selector_background_gray">

                    <include
                        layout="@layout/layout_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_view_height_0.5"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/book_cover_catalog"
                        android:textColor="@color/theme_primary"
                        android:textSize="@dimen/dimen_text_15" />

                    <include
                        layout="@layout/layout_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_view_height_0.5"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <include
                    android:id="@+id/book_cover_category_recommend_divider"
                    layout="@layout/layout_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_8"
                    android:layout_below="@id/book_cover_catalog_view" />

                <!-- 类别推荐 -->
                <LinearLayout
                    android:id="@+id/book_cover_category_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/book_cover_category_recommend_divider"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/category_recommend_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_padding_10"
                        android:paddingTop="@dimen/dimen_padding_10"
                        android:paddingLeft="@dimen/dimen_padding_12"
                        android:paddingRight="@dimen/dimen_padding_12"
                        android:text="@string/book_cover_recommend"
                        android:textColor="@color/color_black_2e2e2e"
                        android:textSize="@dimen/dimen_text_15" />

                    <LinearLayout
                        android:id="@+id/category_recommend_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dimen_margin_12"
                        android:layout_marginRight="@dimen/dimen_margin_12"
                        android:paddingBottom="@dimen/dimen_padding_5"
                        android:paddingTop="@dimen/dimen_padding_5" />
                </LinearLayout>

                <include
                    android:id="@+id/book_cover_author_recommend_divider"
                    layout="@layout/layout_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_8"
                    android:layout_below="@id/book_cover_category_recommend" />

                <!-- 作者推荐 -->
                <LinearLayout
                    android:id="@+id/book_cover_author_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/book_cover_author_recommend_divider"
                    android:paddingBottom="@dimen/dimen_padding_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/author_recommend_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_padding_10"
                        android:paddingTop="@dimen/dimen_padding_10"
                        android:paddingLeft="@dimen/dimen_padding_12"
                        android:paddingRight="@dimen/dimen_padding_12"
                        android:text="@string/book_cover_author_recommend"
                        android:textColor="@color/color_black_2e2e2e"
                        android:textSize="@dimen/dimen_text_15" />

                    <LinearLayout
                        android:id="@+id/author_recommend_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_margin_12"
                        android:layout_marginRight="@dimen/dimen_margin_12"
                        android:orientation="vertical" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_guide_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:visibility="gone"
            android:id="@+id/iv_guide_cover_page"
            android:layout_marginTop="@dimen/dimen_margin_125"
            android:layout_marginLeft="@dimen/dimen_margin_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</RelativeLayout>