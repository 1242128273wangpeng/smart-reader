<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96000000">

    <ImageView
        android:id="@+id/ad_image_switch_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ad_logo_switch_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ad_image_switch_act"
        android:layout_alignRight="@+id/ad_image_switch_act" />

    <ImageView
        android:id="@+id/iv_close_switch_act"
        android:layout_width="@dimen/switch_close_image_width"
        android:layout_height="@dimen/switch_close_image_height"
        android:layout_marginRight="@dimen/switch_close_margin_right"
        android:layout_marginTop="@dimen/switch_close_margin_top"
        android:layout_alignTop="@id/ad_image_switch_act"
        android:layout_alignRight="@id/ad_image_switch_act"
        android:src="@drawable/close" />


</RelativeLayout>