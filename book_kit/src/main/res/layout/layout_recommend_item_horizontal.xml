<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_padding_5"
        android:paddingBottom="@dimen/dimen_padding_5"
        android:paddingLeft="@dimen/dimen_padding_10"
        android:paddingRight="@dimen/dimen_padding_10"
        android:background="@drawable/selector_background_white">
    
    <FrameLayout
            android:id="@+id/recommend_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_120"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true">
        
        <ImageView
                android:id="@+id/layout_recommend_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_book_cover_default"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"/>
    </FrameLayout>
    
    <TextView
            android:id="@+id/layout_recommend_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommend_image"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_padding_7"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="@color/color_black_2e2e2e"
            android:textSize="@dimen/dimen_text_15"/>
    
    <TextView
            android:id="@+id/layout_recommend_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_recommend_item_title"
            android:paddingTop="@dimen/dimen_padding_7"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="@color/color_gray_696969"
            android:textSize="@dimen/dimen_text_13"/>

</RelativeLayout>
