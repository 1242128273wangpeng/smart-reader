<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/remove_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">
    
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:background="@color/color_gray_d2d2d2"
            />
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_padding_57"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
        
        <Button
                android:id="@+id/btn_left"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_padding_35"
                android:layout_marginLeft="@dimen/dimen_padding_54"
                android:layout_marginRight="@dimen/dimen_margin_10"
                android:layout_weight="1"
                android:background="@drawable/selector_button_gray_green"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/selector_text_gray_green"
                android:textSize="@dimen/dimen_text_18"/>
        
        <Button
                android:id="@+id/btn_right"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_view_height_35"
                android:layout_marginLeft="@dimen/dimen_margin_10"
                android:layout_marginRight="@dimen/dimen_margin_54"
                android:layout_weight="1"
                android:background="@drawable/selector_button_gray_green"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/selector_text_gray_green"
                android:textSize="@dimen/dimen_text_18"/>
    </LinearLayout>

</LinearLayout>