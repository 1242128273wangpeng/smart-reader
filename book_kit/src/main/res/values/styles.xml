<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--调试模式界面字体-->

    <style name="Debug_Widget_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_margin_14</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_323232</item>
    </style>

    <!--调试模式界面字体-->

    <style name="Debug_Widget_Text_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_margin_14</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_323232</item>
    </style>

    <!--调试模式界面button-->

    <style name="Debug_Widget_View">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="CircleProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">@dimen/dimen_view_width_48</item>
        <item name="android:maxWidth">@dimen/dimen_view_width_48</item>
        <item name="android:minHeight">@dimen/dimen_view_height_48</item>
        <item name="android:maxHeight">@dimen/dimen_view_height_48</item>
    </style>

    <style name="biz_offline_title_style">
        <item name="android:textSize">17.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ff8e8e8e</item>
    </style>

    <style name="biz_offline_desc_style">
        <item name="android:textSize">13.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ff8e8e8e</item>
    </style>

    <style name="update_dialog"
           parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDialog"
           parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/color_black_00000000</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="custom_refresh_loading">
        <item name="android:indeterminateDuration">800</item>
        <item name="android:indeterminateDrawable">@drawable/prl_refresh_loading</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="custom_pop_loading">
        <item name="android:indeterminateDuration">800</item>
        <item name="android:indeterminateDrawable">@drawable/pb_pop_loading</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog"
           parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_view_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="remove_menu_anim_style">
        <item name="android:windowEnterAnimation">@anim/remove_menu_in</item>
        <item name="android:windowExitAnimation">@anim/remove_menu_out</item>
    </style>

    <declare-styleable name="NightShadowView">
        <attr name="cornerRadius"
              format="dimension"/>
        <attr name="cornerTopLeftRadius"
              format="dimension"/>
        <attr name="cornerTopRightRadius"
              format="dimension"/>
        <attr name="cornerBottomLeftRadius"
              format="dimension"/>
        <attr name="cornerBottomRightRadius"
              format="dimension"/>
        <attr name="drawable"
              format="reference"/>
    </declare-styleable>

    <style name="BottomPopupDialog">
        <item name="android:windowEnterAnimation">@anim/home_clear_cache_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/home_clear_cache_exit_anim</item>
    </style>


    <!-- 导航栏 -->
    <declare-styleable name="NavigationBarStrip">
        <attr name="indicatorMarginBottom" format="dimension"/>

        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorFactor" format="float"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="indicatorPadding" format="dimension"/>
        <attr name="indicatorTextSize" format="dimension"/>

        <attr name="indicatorType" format="enum">
            <enum name="line" value="0"/>
            <enum name="point" value="1"/>
        </attr>

        <attr name="indicatorGravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>

        <attr name="indicatorRadius" format="dimension"/>
        <attr name="indicatorAnimationDuration" format="integer"/>

        <attr name="indicatorInactiveColor" format="color"/>
        <attr name="indicatorActiveColor" format="color"/>
    </declare-styleable>



