<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_detail_bg"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/img_book_cover"
        android:layout_width="86dp"
        android:layout_height="122dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@drawable/common_book_cover_default_icon"
        android:contentDescription="@string/module_name"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_book_cover"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/txt_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF323232"
            android:textSize="18sp"
            tools:text="@string/default_title"/>

        <TextView
            android:id="@+id/txt_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_book_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFB3B3B3"
            android:textSize="12sp"
            tools:text="作者"/>

        <TextView
            android:id="@+id/txt_book_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_book_author"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="#b3b3b3"
            android:textSize="12sp"
            tools:text="@string/default_message"/>

        <TextView
            android:id="@+id/txt_book_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_book_chapter"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:textColor="#b3b3b3"
            android:textSize="12sp"
            tools:text="更新时间："/>

        <TextView
            android:id="@+id/txt_book_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_book_chapter"
            android:layout_marginRight="13dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/txt_book_update"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#b3b3b3"
            android:textSize="12sp"
            tools:text="123章"/>
    </RelativeLayout>
</RelativeLayout>