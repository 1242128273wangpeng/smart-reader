<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookshelf_item_layout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridThree"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/bookshelf_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bookshelf__item_press_bg">

        <RelativeLayout
            android:id="@+id/book_shelf_image_view"
            android:layout_width="87dp"
            android:layout_height="108dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dimen_margin_2"
            android:background="@drawable/book_shade"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/book_shelf_rectangle"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/book_shelf_image"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4.2dp"
                    android:layout_marginLeft="3.5dp"
                    android:layout_marginRight="3.5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bookshelf_book_cover_default"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/bookshelf_book_cover_default"/>
            </FrameLayout>

            <TextView
                android:id="@+id/book_shelf_unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#88dddada"
                android:gravity="center"
                android:textColor="@color/color_black_212121"
                android:textSize="9sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edit_bookshelf_selected"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"
            android:paddingLeft="1dp"
            android:src="@drawable/book_end"/>

        <LinearLayout
            android:id="@+id/ll_book_shelf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_shelf_image_view"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_shelf_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:ellipsize="end"
                android:lines="2"
                android:text="小说"
                android:textColor="#212121"
                android:textSize="@dimen/dimen_text_12"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_book_shelf_title"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/book_shelf_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2014-08-14更新"
                android:textColor="#949494"
                android:textSize="9sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>