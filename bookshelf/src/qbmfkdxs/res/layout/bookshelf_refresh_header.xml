<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_container"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <TextView
        android:id="@+id/txt_refresh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/refresh_start"
        android:textColor="#999c9e"/>

    <ProgressBar
        android:id="@+id/pgbar_refresh_loading"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/txt_refresh_title"
        android:layout_toStartOf="@id/txt_refresh_title"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_refresh_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/txt_refresh_title"
        android:layout_toStartOf="@id/txt_refresh_title"
        android:contentDescription="@null"
        android:src="@drawable/refresh_down_arrow_icon"/>

</RelativeLayout>