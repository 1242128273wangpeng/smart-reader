<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_book_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_item_bg"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/img_book_select_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bookshelf_item_selected_icon"
        android:contentDescription="@string/module_name"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_book_select_state">

        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="66dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/common_book_cover_default_icon"
            android:contentDescription="@string/module_name"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/img_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_book_cover"
            android:layout_alignTop="@+id/img_book_cover"
            android:layout_gravity="top|left"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/module_name"
            android:src="@drawable/bookshelf_item_book_finish_icon"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rl_book_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_book_cover"
            android:layout_toRightOf="@+id/img_book_cover">

            <TextView
                android:id="@+id/txt_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#252B35"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="书名"/>

            <TextView
                android:id="@+id/txt_book_latest_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_book_name"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#7D8595"
                android:textSize="12sp"
                tools:text="二百六十章..."/>

            <TextView
                android:id="@+id/txt_book_last_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_book_latest_chapter"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:singleLine="true"
                android:textColor="#7D8595"
                android:textSize="12sp"
                tools:text="2014-08-14更新"/>

            <View
                android:id="@+id/view_divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_book_last_update_time"
                android:layout_alignTop="@id/txt_book_last_update_time"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/txt_book_last_update_time"
                android:background="#7D8595"/>

            <TextView
                android:id="@+id/txt_book_unread_chapters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_book_latest_chapter"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/view_divider"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#7D8595"
                android:textSize="12sp"
                tools:text="20/260章"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>