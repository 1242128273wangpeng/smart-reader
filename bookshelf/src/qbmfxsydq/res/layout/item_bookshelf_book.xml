<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_item_press_bg">

    <TextView
        android:id="@+id/bookshelf_item_layout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListOne"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/book_unread_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/check_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_delete_checked"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/book_shelf_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/check_delete">

        <FrameLayout
            android:id="@+id/book_shelf_image_view"
            android:layout_width="66dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_margin_12"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/book_mask"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/book_shelf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/book_mask"
                android:contentDescription="@string/app_name"
                android:paddingBottom="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:scaleType="fitXY" />
        </FrameLayout>

        <ImageView
            android:id="@+id/book_shelf_status_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book_shelf_image_view"
            android:layout_alignTop="@+id/book_shelf_image_view"
            android:layout_gravity="top|left"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/left_end"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/book_shelf_status_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/book_shelf_image_view"
            android:layout_alignTop="@+id/book_shelf_image_view"
            android:layout_gravity="top|right"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bookshelf_book_status_update"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/bookshelf_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_shelf_image_view"
            android:layout_toRightOf="@+id/book_shelf_image_view">

            <LinearLayout
                android:id="@+id/ll_book_shelf_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/dimen_margin_12"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_shelf_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#212121"
                    android:textSize="@dimen/dimen_text_16" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/book_shelf_author_unread_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_book_shelf_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/book_shelf_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="作者"
                    android:textColor="#949494"
                    android:textSize="@dimen/dimen_text_12" />

                <View
                    android:id="@+id/author_progress_divider"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/book_shelf_author"
                    android:layout_alignTop="@+id/book_shelf_author"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/book_shelf_author"
                    android:background="#949494" />

                <TextView
                    android:id="@+id/book_shelf_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/author_progress_divider"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="20/260章"
                    android:textColor="#949494"
                    android:textSize="@dimen/dimen_text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_shelf_author_unread_container"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/book_shelf_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="2014-08-14更新: "
                    android:textColor="#a5a5a5"
                    android:textSize="@dimen/dimen_text_12" />

                <TextView
                    android:id="@+id/book_shelf_last_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/book_shelf_update_time"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="二百六十章..."
                    android:textColor="#a5a5a5"
                    android:textSize="@dimen/dimen_text_12" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_view_height_0.5"
        android:layout_below="@+id/book_shelf_item"
        android:background="#e8e8e8" />
</RelativeLayout>