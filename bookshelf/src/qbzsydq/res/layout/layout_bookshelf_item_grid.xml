<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf__item_press_bg"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/book_shelf_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/check_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_delete_checked"
        android:contentDescription="@string/app_name"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/bookshelf_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:layout_toRightOf="@+id/check_delete">

        <FrameLayout
            android:id="@+id/book_shelf_image_view"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/book_mask"/>

            <ImageView
                android:id="@+id/book_shelf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bookshelf_book_cover_default"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/bookshelf_book_cover_default"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/img_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bookshelf_book_status_finish"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_book_shelf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/book_shelf_image_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_shelf_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#323232"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/rl_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_shelf_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#ce3d3e"
                    android:textSize="12sp"
                    tools:text="100章"/>

                <ImageView
                    android:id="@+id/book_unread_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bookshelf_mark_unread"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/book_shelf_last_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_book_shelf_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5.5dp"
            android:layout_toRightOf="@+id/book_shelf_image_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#777777"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_shelf_last_chapter"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/book_shelf_image_view">

            <TextView
                android:id="@+id/book_shelf_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:textColor="#959595"
                android:textSize="12sp"
                tools:text="2014-08-14更新"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/bookshelf_information"
        android:background="#e8e8e8"/>
</RelativeLayout>