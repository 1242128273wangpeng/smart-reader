<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:id="@+id/rl_delete_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_delete_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bookshelf_delete_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_delete_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/bookshelf_delete_dialog_title"
                android:textColor="#323232"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E8E8E8"/>

            <TextView
                android:id="@+id/txt_delete_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:lineSpacingExtra="6dp"
                android:text="@string/bookshelf_delete_dialog_content"
                android:textColor="#323232"
                android:textSize="16sp"/>

            <CheckBox
                android:id="@+id/ckb_delete_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="10dp"
                android:button="@drawable/bookshelf_delete_check_box_sel"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="@string/bookshelf_delete_dialog_check"
                android:textColor="#777777"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="#E8E8E8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="0.5dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:background="#E8E8E8"/>

                <Button
                    android:id="@+id/btn_delete_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/view_divider"
                    android:background="@drawable/bookshelf_delete_cancel_bg_sel"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@drawable/bookshelf_delete_cancel_text_sel"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btn_delete_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/view_divider"
                    android:background="@drawable/bookshelf_delete_confirm_bg_sel"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@drawable/bookshelf_delete_confirm_text_sel"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete_loading"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bookshelf_delete_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/pgbar_delete_loading"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/bookshelf_delete_loading_bg"
                android:indeterminateDuration="1500"
                android:indeterminateOnly="true"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/bookshelf_delete_dialog_loading_prompt"
                android:textColor="#323232"
                android:textSize="17sp"/>
        </LinearLayout>

    </RelativeLayout>

    <net.lzbook.kit.widget.NightShadowView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_delete_content"
        android:layout_alignLeft="@id/rl_delete_content"
        android:layout_alignRight="@id/rl_delete_content"
        android:layout_alignTop="@id/rl_delete_content"
        android:visibility="gone"
        app:cornerRadius="4dp"/>

</RelativeLayout>