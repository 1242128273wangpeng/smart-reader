<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/bookshelf_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_green_1fb7c3"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/content_head_setting"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_head_setting"/>

            <net.lzbook.kit.book.view.FirstUsePointView
                android:id="@+id/redpoint_home_setting"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignRight="@+id/content_head_setting"
                android:layout_alignTop="@+id/content_head_setting"
                android:background="#ff0000"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="书架"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/content_head_search"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:layout_toLeftOf="@+id/content_download_manage"
                android:scaleType="fitXY"
                android:src="@drawable/home_head_search"/>

            <ImageView
                android:id="@+id/content_download_manage"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_head_download"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/content_head_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_head"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/rl_head"
        android:background="@color/color_green_1fb7c3"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/home_edit_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_padding_12"
                android:paddingRight="@dimen/dimen_padding_12"
                android:src="@drawable/cover_top_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="编辑书架"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/home_edit_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_padding_12"
                android:paddingRight="@dimen/dimen_padding_12"
                android:text="取消"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_large"/>
        </RelativeLayout>
    </RelativeLayout>


    <net.lzbook.kit.pulllist.SuperSwipeRefreshLayout
        android:id="@+id/bookshelf_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head">

        <com.intelligent.reader.view.ADScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/headerLayout"
                    layout="@layout/ad_item_small_layout_header"
                    android:visibility="gone"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alwaysDrawnWithCache="false"
                    android:clipToPadding="false"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </com.intelligent.reader.view.ADScrollView>


    </net.lzbook.kit.pulllist.SuperSwipeRefreshLayout>


    <ImageView
        android:id="@+id/bookshelf_float_ad"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="@dimen/dimen_margin_10"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bookshelf_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookshelf_empty_icon"/>

        <TextView
            android:id="@+id/bookshelf_empty_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="37dp"
            android:text="@string/mian_bookshelf_empty_hint"
            android:textColor="@color/color_black_282828"
            android:textSize="@dimen/dimen_text_16"/>

        <ImageView
            android:id="@+id/bookshelf_empty_btn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bookshelf_empty_btn"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/book_shelf_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loading_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/dimen_view_width_250"
            android:layout_height="@dimen/dimen_view_height_10"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_margin_10"
            android:layout_marginTop="@dimen/dimen_margin_30"
            android:progressDrawable="@drawable/background_splash_progress"/>

        <ProgressBar
            android:id="@+id/loading_progressbar"
            style="@style/CircleProgressBar"
            android:layout_width="@dimen/dimen_view_width_48"
            android:layout_height="@dimen/dimen_view_height_48"
            android:layout_above="@id/loading_progress"
            android:layout_centerHorizontal="true"
            android:indeterminateDuration="1000"
            android:progressDrawable="@drawable/background_splash_progress"/>

        <TextView
            android:id="@+id/loading_message_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loading_progress"
            android:layout_centerHorizontal="true"
            android:text="新版数据升级中,本过程不消耗流量,"
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/dimen_text_15"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/loading_message_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loading_message_first"
            android:layout_centerHorizontal="true"
            android:text="请您耐心等待...."
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/dimen_text_15"
            android:textStyle="bold"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ll_guide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_guide_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginTop="56dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_bookshelf_guide_download"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_guide_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_margin_40"
            android:scaleType="fitXY"
            android:src="@drawable/bookshelf_guide_remove"
            android:visibility="gone"/>
    </FrameLayout>
</RelativeLayout>