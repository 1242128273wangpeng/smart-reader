<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/read_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dialog_download_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:text="缓存方式"
                android:gravity="center"
                android:textColor="?attr/dialog_title_color"
                android:textSize="18sp" />

			<TextView
                android:id="@+id/reading_all_down"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginBottom="@dimen/padding_10"
                android:background="?attr/dialog_download_confirm_bg"
                android:gravity="center"
                android:text="@string/reading_all_down"
                android:textColor="?attr/dialog_download_confirm_text_color"
                android:textSize="16sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/reading_current_down"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/button_follow_frame_red"
                android:gravity="center"
                android:text="@string/reading_current_down"
                android:textColor="@color/theme_primary"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/reading_cache_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:background="?attr/dialog_download_cancel_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="?attr/dialog_download_cancel_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>