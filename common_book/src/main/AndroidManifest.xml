<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.intelligent.reader"
    android:installLocation="auto"
    android:largeHeap="true"
    android:versionCode="17"
    android:versionName="1.5.4">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22"
        tools:overrideLibrary="comm.umeng.com.umeng_community_library_project"/>

    <!-- 用于在屏幕关闭时维持下载网络 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 用于连接Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 用于识别网络接入点等信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 用于精确统计用户手机的系统信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <!-- 用于识别WIFI网络等信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 离线下载 -->
    <uses-permission android:name="android.permission.REORDER_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 百度统计3.7.1新增权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <!-- WeChat -->
    <!-- WeChat -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <!--qq-->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application
        android:name=".app.BookApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:resizeableActivity="true"
        tools:replace="android:allowBackup">
        <!--适配全面屏手机-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4"/>
        <!--huawei-->
        <meta-data
            android:name="android.notch_support"
            android:value="true"/>
        <!--xiaomi适配异形屏-->
        <meta-data
            android:name="notch.config"
            android:value="portrait"/>
        <!-- start for GaoDe Map -->
        <service android:name="com.amap.api.location.APSService"/>

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="${AMAP_APIKEY}"/>
        <!-- end for GaoDe Map -->

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="${UMENG_APP_KEY}"/>

        <meta-data
            android:name="UMENG_PUSH_SECRET"
            android:value="${UMENG_PUSH_SECRET}"/>

        <meta-data
            android:name="UMENG_PUSH_XIAOMI_ID"
            android:value="${UMENG_PUSH_XIAOMI_ID}"/>

        <meta-data
            android:name="UMENG_PUSH_XIAOMI_KEY"
            android:value="${UMENG_PUSH_XIAOMI_KEY}"/>


        <!-- 您从百度网站获取的APP KEY -->
        <meta-data
            android:name="BaiduMobAd_STAT_ID"
            android:value="${BAIDU_STAT_ID}"/>

        <meta-data
            android:name="WECHAT_APPID"
            android:value="${WECHAT_APPID}"/>

        <meta-data
            android:name="QQ_APPID"
            android:value="${QQ_APPID}"/>

        <meta-data
            android:name="REYUN_APPKEY"
            android:value="${REYUN_APPKEY}"/>

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WXEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <!--微信Activity设置别名-->
        <activity-alias
            android:name="${PACKAGE_NAME}.wxapi.WXEntryActivity"
            android:enabled="true"
            android:exported="true"
            android:targetActivity=".activity.WXEntryActivity"/>

        <!-- 书架页 发现页 -->
        <activity
            android:name=".activity.HomeActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="keyboard|orientation|screenSize|screenLayout|navigation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent">

        </activity>

        <activity
            android:name=".activity.CataloguesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>
        <!-- 关于 -->

        <!--调试界面-->
        <activity
            android:name=".activity.DebugActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <activity
            android:name=".activity.DebugHostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"
            android:windowSoftInputMode="adjustPan"/>

        <!-- 标签聚合页面 -->
        <activity
            android:name=".activity.LabelsDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <!-- 阅读设置页面 -->

        <!-- 更多设置 -->
        <activity
            android:name=".activity.SettingMoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <!-- 设置页 -->
        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>


        <!-- 下载apk失败页面 -->
        <activity
            android:name=".activity.DownloadErrorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <!-- 找书页面 -->
        <activity
            android:name=".activity.SearchBookActivity"
            android:configChanges="keyboard"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".activity.WelfareCenterActivity"
            android:configChanges="keyboard"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"
            android:windowSoftInputMode="adjustNothing"/>

        <activity
            android:name=".upush.OfflineNotifyActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Start"/>

        <!-- 推送 -->
        <receiver android:name=".receiver.PushClickReceiver">
            <intent-filter>
                <action android:name="${PACKAGE_NAME}.CLICK_BOOK_UPDATE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.DownBookClickReceiver">
            <intent-filter>
                <action android:name="${PACKAGE_NAME}.receiver.CLICK_DOWN_BOOK"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.CoverPageActivity"
            android:label="@string/title_activity_act_book_cover"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>
        <activity
            android:name=".activity.FootprintActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>
        <activity
            android:name=".activity.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activity.FindBookDetail"
            android:configChanges="keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <activity
            android:name=".activity.TabulationActivity"
            android:configChanges="keyboard"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeTranslucent"/>

        <activity
            android:name=".activity.GoToCoverOrReadActivity"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:taskAffinity=".gotocoverorreadactivity">

        </activity>
        <!-- 腾讯SSO授权的Activity注册 -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="tencent${QQ_APPID}"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <activity
            android:name=".activity.SwitchADActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <!-- 微信回调activity -->

        <receiver android:name=".receiver.ConnectionChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service
            android:name="net.lzbook.kit.utils.update.DownloadIntentService"
            android:enabled="true"
            android:exported="true"/>

        <service
                android:name="net.lzbook.kit.dynamic.service.DynamicService"
                android:label="dynamicparameter"/>

        <!--统计SDK网络监听-->
        <receiver android:name="com.dingyue.statistics.receiver.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>