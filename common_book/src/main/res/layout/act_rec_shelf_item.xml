<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_over_shelf"
        android:paddingBottom="@dimen/padding_12"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:visibility="gone">
    
    <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:paddingBottom="@dimen/padding_12"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:text="斗破苍穹"
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/medium_size_14"/>
    
    <TextView
            android:id="@+id/book_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/book_name"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:text="最新：阿萨打算打大的"
            android:textColor="@color/color_gray_9C9C9C"
            android:textSize="12sp"/>
    
    <TextView
            android:id="@+id/book_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/book_name"
            android:paddingBottom="10dp"
            android:paddingTop="0dp"
            android:text="1小时前更新"
            android:textColor="@color/color_gray_9C9C9C"
            android:textSize="12sp"/>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:background="@color/color_gray_d9d9d9"/>
</RelativeLayout>