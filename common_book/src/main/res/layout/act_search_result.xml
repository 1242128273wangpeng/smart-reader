<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_fafafa" >

    <RelativeLayout
        android:id="@+id/rl_title_book_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/color_black"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/activity_searchresult_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="12dp"
            android:src="@drawable/icon_back_deep" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_title_more_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/activity_searchresult_search_button"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="@dimen/padding_5"
                android:text="确定"
                android:textSize="14sp"
                android:textColor="@color/color_yellow_d6a628"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title_search"
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/activity_searchresult_back_button"
            android:gravity="center"
            android:textColor="@drawable/selector_title_bar_back_text"
            android:visibility="visible"
            android:textSize="@dimen/top_bar_text_size" />

        <RelativeLayout
            android:id="@+id/activity_searchresult_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/rl_title_more_search"
            android:layout_toRightOf="@id/tv_title_search"
            android:background="@drawable/shape_search_bg"
            android:visibility="visible" >

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_search_mark_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/search_mark" />

            <TextView

                android:id="@+id/activity_searchresult_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:gravity="center|right"
                android:singleLine="true"
                android:textColor="@color/color_gray_9C9C9C"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/activity_searchresult_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/activity_searchresult_count_text"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@color/color_gray_9C9C9C"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_searchresult_search_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/rl_title_more_search"
            android:layout_toRightOf="@id/tv_title_search"
            android:background="@drawable/shape_search_bg"
            android:visibility="visible" >

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_search_mark_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/search_mark" />

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/activity_searchresult_search_clearbutton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:paddingRight="12dp"
                android:src="@drawable/selector_search_clear_icon"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <EditText
                android:layout_marginLeft="14dp"
                android:id="@+id/activity_searchresult_search_edittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/activity_searchresult_search_clearbutton"
                android:layout_toRightOf="@id/iv_search_mark_search"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="@string/search_title_text"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_gray_9C9C9C"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_gray_d9d9d9" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_book_cover">

        <RelativeLayout
            android:id="@+id/activity_searchresult_result_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_searchresult_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/item_selector_white"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/activity_searchresult_finish_text"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/icon_selected_not_finish"
                    android:text="@string/search_finish_book"
                    android:textColor="@color/theme_primary_ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/activity_searchresult_select_finish"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/activity_searchresult_finish_text"
                    android:background="@drawable/icon_select_finish"
                    android:text="@string/search_finish_select_book"
                    android:textColor="@color/color_gray_f2b924"
                    android:textSize="12sp" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/rl_refresh_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_searchresult_filter">

                <ListView
                    android:id="@+id/activity_searchresult_mainlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:fadingEdge="none"
                    android:scrollbars="none"
                    android:headerDividersEnabled="false" />
            </FrameLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/activity_searchresult_hint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>