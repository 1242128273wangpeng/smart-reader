<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    
    <ImageView
            android:id="@+id/image_downloadError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/icon"/>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_downloadError"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="由于网络原因，软件下载失败，请重新下载"
            android:textSize="13sp"/>
    
    <Button
            android:id="@+id/button_downloadError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/remove_delete_normal"
            android:text="重新下载"
            android:textColor="#fffbf4"
            />
</RelativeLayout>
