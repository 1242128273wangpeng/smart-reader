<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bookshelf__item_press_bg">
    
    <ImageView
            android:id="@+id/item_ad_image"
            android:layout_width="@dimen/dimen_view_width_64"
            android:layout_height="@dimen/dimen_view_height_64"
            android:layout_marginTop="@dimen/dimen_margin_10"
            android:layout_marginLeft="@dimen/dimen_margin_10"
            android:layout_marginRight="@dimen/dimen_margin_10"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_ad_image"
            android:layout_toRightOf="@id/item_ad_image"
            android:layout_marginLeft="@dimen/dimen_margin_15"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
        
        <TextView
                android:id="@+id/item_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/color_black_323232"
                android:textSize="@dimen/dimen_text_16"/>
        
        <ImageView
                android:layout_marginTop="@dimen/dimen_margin_3"
                android:layout_alignParentRight="true"
                android:id="@+id/item_ad_right_down"
                android:layout_marginRight="@dimen/dimen_margin_10"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_ad_gdt"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <RatingBar
            android:id="@+id/item_ad_extension"
            style="@style/promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"/>
    
    <TextView
            android:id="@+id/item_ad_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_ad_image"
            android:layout_toRightOf="@id/item_ad_image"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dimen_margin_12"
            android:text="@string/app_name"
            android:textColor="@color/color_gray_b3b3b3"
            android:textSize="@dimen/dimen_text_12"/>
    
    <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:layout_marginTop="@dimen/dimen_margin_10"
            android:layout_below="@id/item_ad_image"
            android:background="@color/color_gray_e8e8e8"/>
</RelativeLayout>