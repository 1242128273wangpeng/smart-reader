<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.intelligent.reader.read.page.SpacingTextView
            android:id="@+id/slogan_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/slogan"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/book_name_tv"
                android:layout_width="match_parent"
                tools:text="校花贴身高手"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/book_auth_tv"
                android:layout_width="match_parent"
                tools:text="西红柿"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/product_icon_iv"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_home_page"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/product_name_tv"
            android:layout_height="wrap_content"/>


    <com.intelligent.reader.read.page.SpacingTextView
            android:id="@+id/product_name_tv"
            android:layout_width="match_parent"
            android:text="@string/slogan"
            android:layout_marginBottom ="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/black"
            android:layout_height="20dp"/>
</RelativeLayout>