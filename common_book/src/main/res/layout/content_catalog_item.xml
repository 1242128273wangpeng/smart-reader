<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/select_background_color"
        android:layout_height="wrap_content">
    
    <TextView
            app:onPressChangeAlpha="true"
            android:id="@+id/catalog_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_alignParentLeft="true"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal"
            tools:ignore="MissingPrefix"/>
    
    <TextView
            android:id="@+id/catalog_chapter_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_gray_9C9C9C"
            android:text="已缓存"
            android:textSize="@dimen/small_size_12"
            android:textStyle="normal"/>

    <View
            android:id="@+id/change_source_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_width_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/common_press_bg"/>
    
</RelativeLayout>