<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dimen_view_width_300"
        android:layout_height="@dimen/dimen_view_height_300"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:scrollbars="vertical">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical">
        
        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="标题"
                android:padding="@dimen/padding_12"
                android:gravity="center"
                android:textColor="@color/color_black_323232"
                android:textSize="@dimen/text_size_18"/>
        
        <include layout="@layout/dialog_divider"/>
        
        <LinearLayout
                android:id="@+id/feedback_checkboxs_parent"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="@dimen/dimen_margin_8"
                android:layout_marginRight="@dimen/dimen_margin_8"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                
                <CheckBox
                        android:id="@+id/feedback_rb_1"
                        android:button="@drawable/dialog_checkbox_selector"
                        style="@style/checkBox_feedback_style"
                        android:textColor="@drawable/dialog_feedback_text_selector"
                        android:text="缓存失败"/>
                
                <CheckBox
                        android:id="@+id/feedback_rb_2"
                        android:button="@drawable/dialog_checkbox_selector"
                        style="@style/checkBox_feedback_style"
                        android:textColor="@drawable/dialog_feedback_text_selector"
                        android:text="书籍无法阅读"/>
            </LinearLayout>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                
                <CheckBox
                        android:id="@+id/feedback_rb_3"
                        style="@style/checkBox_feedback_style"
                        android:button="@drawable/dialog_checkbox_selector"
                        android:textColor="@drawable/dialog_feedback_text_selector"
                        android:text="网络无法连接"/>
                
                <CheckBox
                        android:id="@+id/feedback_rb_4"
                        style="@style/checkBox_feedback_style"
                        android:button="@drawable/dialog_checkbox_selector"
                        android:textColor="@drawable/dialog_feedback_text_selector"
                        android:text="空章、乱码"/>
            </LinearLayout>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                
                <CheckBox
                        android:id="@+id/feedback_rb_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_big16_size"
                        android:button="@drawable/dialog_checkbox_selector"
                        android:gravity="center_vertical"
                        android:text="重复内容或章节出错"
                        android:textColor="@drawable/dialog_feedback_text_selector"/>
            </LinearLayout>
        </LinearLayout>
        
        <TextView
                android:id="@+id/feedback_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin_16"
                android:layout_marginLeft="@dimen/dimen_margin_18"
                android:layout_marginRight="@dimen/dimen_margin_18"
                android:background="@drawable/dialog_feedback_submit"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>
    </LinearLayout>
    
    <ImageView
            android:id="@+id/feedback_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_20"
            android:scaleType="fitXY"
            android:src="@drawable/ic_feedback_close"/>
</RelativeLayout>