<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dimen_view_width_300"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:focusable="true">
    
    <LinearLayout
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dialog_bg"
            android:layout_marginTop="35dp"
            android:orientation="vertical">
        
        <TextView
                android:id="@+id/dialog_top_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/change_source"
                android:padding="@dimen/padding_12"
                android:gravity="center"
                android:textColor="@color/color_black_323232"
                android:textSize="@dimen/text_size_18"/>
        
        <include
                layout="@layout/dialog_divider"
                android:id="@+id/change_source_divider"/>
        
        <RelativeLayout
                android:id="@+id/change_source_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_source_divider">
            
            <TextView
                    android:id="@+id/change_source_disclaimer_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_margin_18"
                    android:layout_marginRight="@dimen/dimen_margin_18"
                    android:padding="@dimen/padding_4"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:lineSpacingMultiplier="1.5"
                    android:gravity="left|center"
                    android:maxLines="4"
                    android:text="@string/translate_code_read"
                    android:textColor="@color/color_black_323232"
                    android:textSize="@dimen/dimen_text_14"/>
        </RelativeLayout>
        
        <LinearLayout
                android:id="@+id/dialog_lv_gap"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            
            <ListView
                    android:id="@+id/change_source_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/change_source_statement"
                    android:minHeight="@dimen/dimen_view_height_60"
                    android:cacheColorHint="@color/color_black_00000000"
                    android:divider="@color/color_gray_e8e8e8"
                    android:dividerHeight="@dimen/dimen_view_height_0.5"
                    android:paddingLeft="@dimen/dimen_padding_5"
                    android:paddingRight="@dimen/dimen_padding_5"
                    android:fadingEdge="none"
                    android:scrollbarFadeDuration="0"
                    android:fadeScrollbars="false"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:verticalScrollbarPosition="right"
                    android:scrollbarThumbVertical="@color/top_navigation_bg_color"
                    android:scrollbarSize="@dimen/dimen_view_width_5"
                    android:listSelector="@android:color/transparent"/>
        </LinearLayout>
        
        <RelativeLayout
                android:id="@+id/change_source_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_height_50"
                android:layout_below="@id/change_source_list">
            
            <View
                    android:id="@+id/change_source_bottom_divider"
                    android:layout_width="@dimen/dimen_view_width_0.5"
                    android:layout_height="@dimen/dimen_view_height_50"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:background="@color/color_gray_e8e8e8"/>
            
            <TextView
                    android:id="@+id/change_source_original_web"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/change_source_bottom_divider"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:background="@drawable/dialog_btn_left_selector"
                    android:textColor="@drawable/dialog_cancel_selector"
                    android:textSize="@dimen/dimen_text_16"/>
            
            <TextView
                    android:id="@+id/change_source_continue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/change_source_bottom_divider"
                    android:gravity="center"
                    android:text="@string/reading_continue"
                    android:background="@drawable/dialog_btn_right_selector"
                    android:textColor="@drawable/dialog_confirm_selector"
                    android:textSize="@dimen/dimen_text_16"/>
            
            <include
                    layout="@layout/dialog_divider"
                    android:id="@+id/change_source_divider"/>
        </RelativeLayout>
    </LinearLayout>
    
    <net.lzbook.kit.book.view.NightShadowView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/container"
            android:layout_alignRight="@+id/container"
            android:layout_alignBottom="@+id/container"
            android:layout_alignLeft="@+id/container"
            app:cornerRadius="4dp"
            />
</RelativeLayout>