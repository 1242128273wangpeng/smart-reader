<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="true"
    android:scrollbars="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/ll_transform_read_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="转码"
            android:textColor="#323232"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E8E8E8"/>

        <TextView
            android:id="@+id/change_source_disclaimer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/dimen_margin_18"
            android:layout_marginRight="18dp"
            android:layout_marginTop="@dimen/margin_10"
            android:ellipsize="end"
            android:gravity="left|center"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="4"
            android:padding="@dimen/padding_4"
            android:text="@string/translate_code_read"
            android:textColor="@color/color_black_323232"
            android:textSize="@dimen/dimen_text_14"/>

        <LinearLayout
            android:id="@+id/dialog_lv_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/change_source_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_source_statement"
                android:cacheColorHint="@color/color_black_00000000"
                android:divider="@color/color_gray_e8e8e8"
                android:dividerHeight="@dimen/dimen_view_height_0.5"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:minHeight="@dimen/dimen_view_height_60"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="@dimen/dimen_view_width_5"
                android:scrollbarStyle="insideInset"
                android:scrollbarThumbVertical="@color/top_navigation_bg_color"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="right"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/change_source_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_50"
            android:layout_below="@id/change_source_list">

            <View
                android:id="@+id/change_source_bottom_divider"
                android:layout_width="@dimen/dimen_view_width_0.5"
                android:layout_height="@dimen/dimen_view_height_50"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@color/color_gray_e8e8e8"/>

            <TextView
                android:id="@+id/change_source_original_web"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/change_source_bottom_divider"
                android:background="@drawable/dialog_btn_left_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/dialog_cancel_selector"
                android:textSize="@dimen/dimen_text_16"/>

            <TextView
                android:id="@+id/change_source_continue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/change_source_bottom_divider"
                android:background="@drawable/dialog_btn_right_selector"
                android:gravity="center"
                android:text="@string/reading_continue"
                android:textColor="@drawable/dialog_confirm_selector"
                android:textSize="@dimen/dimen_text_16"/>

            <include
                android:id="@+id/change_source_divider"
                layout="@layout/dialog_divider"/>
        </RelativeLayout>
    </LinearLayout>

    <!--<net.lzbook.kit.book.view.NightShadowView-->
