<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/remove_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray_fafafa">
    
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:background="@color/color_gray_e8e8e8"/>
    
    <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray_fafafa"
            android:orientation="horizontal">
        
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_margin_60"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
            
            <Button
                    android:id="@+id/btn_left"
                    android:layout_width="140dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bookshelf_delete_cancel_bg"
                    android:gravity="center"
                    android:text="全选"
                    android:textColor="@drawable/bookshelf_delete_cancel_text_color"
                    android:textSize="@dimen/text_size_16"/>
        </RelativeLayout>
        
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_margin_60"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
            
            <Button
                    android:id="@+id/btn_right"
                    android:layout_width="140dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/bookshelf_delete_submit_bg"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@drawable/bookshelf_delete_submit_text_color"
                    android:textSize="@dimen/text_size_16"/>
        </RelativeLayout>
    </LinearLayout>
    
    <net.lzbook.kit.book.view.NightShadowView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/container"
            android:layout_alignRight="@+id/container"
            android:layout_alignBottom="@+id/container"
            android:layout_alignLeft="@+id/container"
            />
</RelativeLayout>