<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector_white"
        android:orientation="vertical">
    
    <RelativeLayout
            android:id="@+id/listitem_searchresult_mainitem_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">
        
        <FrameLayout
                android:id="@+id/rl_search_img"
                android:layout_width="57dp"
                android:layout_height="76dp"
                android:layout_alignParentLeft="true">
            
            <ImageView
                    android:id="@+id/listitem_searchresult_conver_image"
                    android:layout_width="57dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_default_cover"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"/>
        
        </FrameLayout>
        
        <ImageView
                android:id="@+id/iv_add_search_result_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bookstore_add"/>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rl_search_img"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/iv_add_search_result_item"
                android:layout_toRightOf="@id/rl_search_img">
            
            <TextView
                    android:id="@+id/tv_name_book_search_result_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="名称名称名称名称"
                    android:textColor="@color/book_name"
                    android:textSize="14sp"/>
            
            <TextView
                    android:id="@+id/tv_author_search_result_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_name_book_search_result_item"
                    android:layout_marginTop="@dimen/margin_top_to_name"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="作者"
                    android:textColor="@color/book_chapter"
                    android:textSize="@dimen/book_author_chapter_size"/>
            
            <TextView
                    android:id="@+id/tv_chapter_count_search_result_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_author_search_result_item"
                    android:layout_marginTop="@dimen/search_margin_top_to_author"
                    android:gravity="center"
                    android:text="1章"
                    android:textColor="@color/book_chapter"
                    android:textSize="@dimen/book_author_chapter_size"/>
            
            <TextView
                    android:id="@+id/tv_count_follow_search_result_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_chapter_count_search_result_item"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@id/tv_chapter_count_search_result_item"
                    android:gravity="center_horizontal|bottom"
                    android:singleLine="true"
                    android:text="追看"
                    android:textColor="@color/book_chapter"
                    android:textSize="@dimen/book_flow_size"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <View
            android:id="@+id/devider_search_result_item"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_d9d9d9"/>

</LinearLayout>