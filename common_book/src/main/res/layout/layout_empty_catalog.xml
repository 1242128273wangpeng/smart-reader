<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_layout_empty_online"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <TextView
            android:id="@+id/mask_no_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10"
            android:gravity="center"
            android:layout_marginTop="115dp"
            android:drawableTop="@drawable/bookmark_default_page"
            android:textColor="@color/color_black_323232"
            android:textSize="@dimen/text_size_16"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_24"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
        
        <TextView
                android:layout_width="wrap_content"
                android:text="@string/bookmark_start"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_black_595858"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
        
        <ImageView
                android:background="@drawable/read_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
        <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="@string/bookmark_end"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_black_595858"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>