<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_web_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/color_black"
            android:focusableInTouchMode="true">
        
        <ImageView
                android:id="@+id/btn_left_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="14dp"
                android:src="@drawable/icon_back_deep"/>
        
        <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/reading_web"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_gray_d9d9d9"/>
    </RelativeLayout>
    
    <LinearLayout
            android:id="@+id/ll_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
        
        <WebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
    
    <RelativeLayout
            android:id="@+id/error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">
        
        <ImageView
                android:id="@+id/iv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        
        <TextView
                android:layout_below="@id/iv_error"
                android:text="@string/text_web_error"
                android:paddingTop="@dimen/padding_10"
                android:gravity="center"
                android:textColor="@color/color_gray_707070"
                android:textSize="@dimen/large_size_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>