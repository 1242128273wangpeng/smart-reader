<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/book_end_margin"
        android:paddingRight="@dimen/book_end_margin"
        android:background="@drawable/item_selector_white">
    
    <FrameLayout
            android:id="@+id/ff_image_cover"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true">
        
        <ImageView
                android:id="@+id/layout_recommend_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"/>
    </FrameLayout>
    
    <TextView
            android:id="@+id/layout_recommend_item_title"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ff_image_cover"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:text="永生"
            android:textColor="@color/color_black_353535"
            android:textSize="14sp"/>
    
    <TextView
            android:id="@+id/layout_recommend_item_author"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_recommend_item_title"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:text="梦入神机"
            android:textColor="@color/color_gray_9c9c9c"
            android:textSize="12sp"/>

</RelativeLayout>
