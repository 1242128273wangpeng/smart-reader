<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/novel_foot_options"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    

    <RelativeLayout
            android:layout_above="@+id/novel_jump_linear"
            android:background="@color/color_black_alpha_101010"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        
        <TextView
                android:id="@+id/novel_txtOverlay_chapter"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/padding_10"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_width_120"
                android:text="@string/novel_test_chapter_num"
                android:textColor="@color/color_gray_707070"
                android:textSize="14sp"/>
        
        <TextView
                android:id="@+id/novel_txtOverlay_sequence"
                android:layout_below="@id/novel_txtOverlay_chapter"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="1/90ç« "
                android:textColor="@color/color_gray_707070"
                android:textSize="14sp"/>
        
        <TextView
                android:id="@+id/novel_auto_read"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/padding_8"
                android:text="@string/read_auto"
                android:gravity="center"
                android:drawableLeft="@drawable/btn_autoreading_top"
                android:textColor="@color/color_gray_b3b3b3"
                android:textSize="14sp"
                />
    
    </RelativeLayout>
    
    <LinearLayout
            android:id="@+id/novel_jump_linear"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color_black_alpha_101010"
            android:layout_above="@+id/reading_foot_options_dividing"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        
        <TextView
                android:id="@+id/novel_jump_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/read_press_settings_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_12"
                android:paddingRight="2dp"
                android:text="@string/novel_previous_chapter"
                android:textColor="@color/color_gray_707070"
                android:textSize="14sp"/>
        
        <SeekBar
                android:id="@+id/jump_progressbar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:progressDrawable="@drawable/light_novel_progress_brightness"
                android:splitTrack="false"
                android:thumb="@drawable/light_reading_seekbar_gray"/>
        
        <TextView
                android:id="@+id/novel_jump_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/read_press_settings_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_2"
                android:paddingRight="@dimen/padding_12"
                android:text="@string/novel_next_chapter"
                android:textColor="@color/color_gray_707070"
                android:textSize="14sp"/>
    </LinearLayout>
    
    <View
            android:id="@+id/reading_foot_options_dividing"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_5e5d5d"
            android:contentDescription="TODO"
            android:layout_above="@+id/reading_foot_options"/>
    
    <LinearLayout
            android:id="@+id/reading_foot_options"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_black_alpha_101010"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,UselessParent">
        
        <TextView
                android:id="@+id/read_catalog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/read_catalog"
                android:gravity="center"
                android:singleLine="true"
                android:drawablePadding="5dp"
                android:text="@string/read_catalog"
                android:background="@drawable/read_press_settings_selector"
                android:textColor="@color/color_gray_b5b5b5"
                android:textSize="12sp"
                tools:ignore="SmallSp"/>
        
        <TextView
                android:id="@+id/read_cache"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/read_setting_download"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/read_cache"
                android:background="@drawable/read_press_settings_selector"
                android:textColor="@color/color_gray_b5b5b5"
                android:textSize="12sp"/>
        
        <TextView
                android:id="@+id/read_bright_night"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/read_setting_nightmode"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/read_brightness_night"
                android:background="@drawable/read_press_settings_selector"
                android:textColor="@color/color_gray_b5b5b5"
                android:textSize="12sp"/>
        
        <TextView
                android:id="@+id/read_setting_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/read_setting_font"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/read_setting_more"
                android:background="@drawable/read_press_settings_selector"
                android:textColor="@color/color_gray_b5b5b5"
                android:textSize="12sp"/>
    
    </LinearLayout>
</RelativeLayout>