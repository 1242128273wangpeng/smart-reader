<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/remove_menu_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <Button
            android:id="@+id/btn_delete_menu_add_book"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/delete_popup_height"
            android:layout_weight="1"
            android:background="@drawable/selector_remove_menu_delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fefefe"
            android:textSize="20sp"/>
    
    <Button
            android:id="@+id/btn_add_menu_add_book"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/delete_popup_height"
            android:layout_weight="1"
            android:background="@drawable/selector_remove_menu_collect_add"
            android:gravity="center"
            android:text="加入"
            android:textColor="#fefefe"
            android:textSize="20sp"/>

</LinearLayout>