<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/remove_delete_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:background="?attr/color_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/base_bg"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.82"
            android:background="?attr/bookshelf_delete_cancel_bg"
            android:layout_gravity="center_vertical"
            android:text="取消"
            android:textColor="?attr/bookshelf_delete_cancel_text_color"
            android:textSize="@dimen/large_size_16"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.82"
            android:background="?attr/bookshelf_delete_submit_bg"
            android:layout_gravity="center_vertical"
            android:text="删除"
            android:textColor="?attr/bookshelf_delete_submit_text_color"
            android:textSize="@dimen/large_size_16"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"/>
    </LinearLayout>

</LinearLayout>