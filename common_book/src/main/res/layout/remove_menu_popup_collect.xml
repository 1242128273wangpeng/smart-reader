<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/remove_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0.5"
                    android:background="@color/color_gray_e8e8e8"/>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_white_ffffff"
                    android:orientation="horizontal">
                
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"/>
                
                <Button
                        android:id="@+id/btn_right"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2.82"
                        android:background="@drawable/bookshelf_delete_cancel_bg"
                        android:layout_gravity="center_vertical"
                        android:text="取消"
                        android:textColor="@drawable/bookshelf_delete_cancel_text_color"
                        android:textSize="@dimen/large_size_16"/>
                
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                
                <Button
                        android:id="@+id/btn_left"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2.82"
                        android:background="@drawable/bookshelf_delete_submit_bg"
                        android:layout_gravity="center_vertical"
                        android:text="删除"
                        android:textColor="@drawable/bookshelf_delete_submit_text_color"
                        android:textSize="@dimen/large_size_16"/>
                
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"/>
            </LinearLayout>
        </LinearLayout>
        
        <net.lzbook.kit.book.view.NightShadowView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/container"
                android:layout_alignRight="@+id/container"
                android:layout_alignBottom="@+id/container"
                android:layout_alignLeft="@+id/container"
                />
    </RelativeLayout>
</LinearLayout>