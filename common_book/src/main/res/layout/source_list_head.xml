<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="0dip"
        android:paddingRight="0dp"
        >
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前内容来源"
            android:textColor="@color/color_black_353535"
            android:drawableLeft="@drawable/icon_drawable"
            android:drawablePadding="@dimen/padding_2"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/large_size_18"/>
    
    <TextView
            android:visibility="gone"
            android:id="@+id/source_title_name_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/padding_18"
            android:text="gogle.com"
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/medium_size_14"/>
    
    <TextView
            android:id="@+id/source_title_site_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shulou.com"
            android:paddingTop="@dimen/padding_14"
            android:paddingLeft="@dimen/padding_18"
            android:paddingBottom="@dimen/padding_12"
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/medium_size_14"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_12"
            >
        
        <TextView
                android:id="@+id/source_title_count_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_18"
                android:text="余80章"
                android:textColor="@color/color_gray_9C9C9C"
                android:textSize="@dimen/small_size_12"/>
        
        <TextView
                android:id="@+id/source_title_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="12天前更新"
                android:paddingRight="@dimen/padding_15"
                android:textColor="@color/color_gray_9C9C9C"
                android:textSize="@dimen/small_size_12"/>
    </LinearLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_10"
            android:background="@color/color_gray_f3f3f3"
            />
    
    <TextView
            android:id="@+id/source_list_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/padding_10"
            android:drawableLeft="@drawable/icon_drawable"
            android:drawablePadding="@dimen/padding_2"
            android:text="其它来源"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:textColor="@color/color_black_353535"
            android:textSize="@dimen/large_size_18"/>

</LinearLayout>