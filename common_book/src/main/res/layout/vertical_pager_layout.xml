<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/novel_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/page_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/novel_bottom"
        android:layout_below="@+id/novel_title" />

    <RelativeLayout
        android:id="@+id/novel_bottom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/novel_chapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:minWidth="80dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/novel_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="        "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/novel_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12sp" />

        <com.intelligent.reader.read.page.BatteryView
            android:id="@+id/novel_content_battery_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/novel_time"
            android:paddingTop="2.0dip"
            android:src="@drawable/reading_batty_day" />
    </RelativeLayout>


</RelativeLayout>
