<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discover_list_item_selector_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_no_result_search_result_header"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/color_white"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_search_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_apologize"
            android:drawablePadding="7dp"
            android:text="@string/search_sorry_no_result"
            android:textColor="@color/color_gray_d9d9d9"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_d9d9d9"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_rec_search_result_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="left"
        android:visibility="visible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:contentDescription="@string/app_name"
            android:drawableLeft="@drawable/icon_drawable"
            android:drawablePadding="2dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/search_guess_favorite"
            android:textColor="@color/color_yellow_d4a625"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>