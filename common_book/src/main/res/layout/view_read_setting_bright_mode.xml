<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/read_setting_brightmode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_black_alpha_101010"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ff_read_nightmode_view_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/read_night_mode"
            android:textColor="@color/read_setting_text"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/read_nightmode_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="13dp"
            android:scaleType="center"
            android:src="@drawable/read_setting_unnightmode"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bright_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reading_brightness_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/read_brightness_down"/>

        <SeekBar
            android:id="@+id/bright_manager_progressbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingLeft="@dimen/padding_12"
            android:paddingRight="@dimen/padding_12"
            android:progressDrawable="@drawable/light_novel_progress_brightness"
            android:splitTrack="false"
            android:thumb="@drawable/light_reading_seekbar_gray"/>

        <ImageView
            android:id="@+id/reading_brightness_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:src="@drawable/read_brightness_up"/>

        <Button
            android:id="@+id/btn_bright_system"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_orange_bg_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/reading_brightness_system"
            android:textColor="@color/pagemode_color_selector"
            android:textSize="14sp"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ff_read_savepowermode_view_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/read_savepowermode_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:paddingRight="13dp"
            android:scaleType="center"
            android:src="@drawable/icon_check"/>

        <TextView
            android:id="@+id/read_savepowermode_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/read_savepower_mode"
            android:textColor="@color/color_gray_b3b3b3"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
