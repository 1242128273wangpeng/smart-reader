<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/base_bg"
        android:orientation="vertical"
        android:paddingTop="0dp">
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:layout_alignParentTop="true">
        
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="@dimen/padding_16"
                android:src="?attr/title_back1"/>
        
        <TextView
                android:id="@+id/name_bookend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="?attr/setting_login_font_color"
                android:text="@string/read_end_tip"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toRightOf="@+id/iv_back"
                />
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:visibility="invisible"
                android:paddingRight="@dimen/padding_16"
                android:src="?attr/title_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView"/>
    </RelativeLayout>
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        
        <LinearLayout
                android:id="@+id/over_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp">
            
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_0"
                    android:layout_marginRight="@dimen/padding_0"
                    android:layout_marginTop="10dp">
                
                <ImageView
                        android:id="@+id/ad_view"
                        android:paddingLeft="@dimen/dimen_padding_10"
                        android:paddingRight="@dimen/dimen_padding_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                
                <ImageView
                        android:id="@+id/ad_view_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_padding_10"/>
            
            </RelativeLayout>
            
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="?attr/book_end_card_bg"
                    android:background="#555555"
                    android:layout_height="wrap_content">
                
                <TextView
                        android:id="@+id/textView_endInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_10"
                        android:text="@string/book_end_info"

                        android:textColor="?attr/changesource_text_color"
                        android:textSize="@dimen/text_size_16"/>
            </android.support.v7.widget.CardView>
            
            <android.support.v7.widget.CardView
                    android:id="@+id/card_sourcelist"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="?attr/book_end_card_bg"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                
                <ListView
                        android:id="@+id/sourcelist_bookend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/act_bookend_list_divider"
                        android:dividerHeight="1dp"
                        android:layerType="software">
                </ListView>
            
            </android.support.v7.widget.CardView>
            
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="?attr/book_end_card_bg"
                    android:layout_height="wrap_content">
                
                <LinearLayout
                        android:layout_marginBottom="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    
                    <TextView
                            
                            android:layout_weight="1"
                            android:id="@+id/iv_title_right"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textColor="?attr/book_end_btn_text_bookshelf"
                            android:text="@string/end_to_bookshelf"
                            android:textSize="@dimen/text_size_14"/>
                    
                    <TextView
                            android:id="@+id/iv_back_bookstore"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/end_to_bookstore"
                            android:textColor="@color/read_option_main"
                            android:textSize="@dimen/text_size_14"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>