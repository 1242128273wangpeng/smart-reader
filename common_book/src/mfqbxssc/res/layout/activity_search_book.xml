<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/base_bg">
    
    <RelativeLayout
            android:id="@+id/search_result_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_48"
            android:focusableInTouchMode="true"
            android:background="@color/base_bg">
        
        <ImageView
                android:id="@+id/search_result_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/top_back_selector"/>
        
        <ImageView
                android:id="@+id/search_result_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingLeft="11dp"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/search_submit_btn"/>
        
        <RelativeLayout
                android:id="@+id/search_result_outcome"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/search_result_button"
                android:layout_toRightOf="@id/search_result_back"
                android:background="@drawable/search_input_bg"
                android:visibility="visible">
            
            <TextView
                    android:id="@+id/search_result_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dimen_margin_10"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/search_input_text_color1"
                    android:textSize="@dimen/dimen_text_14"/>
        </RelativeLayout>
        
        <RelativeLayout
                android:id="@+id/search_result_default"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/search_result_button"
                android:layout_toRightOf="@id/search_result_back"
                android:background="@drawable/search_input_bg"
                android:visibility="visible">
            
            <ImageView
                    android:id="@+id/search_result_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="@dimen/dimen_padding_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/search_edit_content_clear"
                    android:visibility="visible"/>
            
            <net.lzbook.kit.book.view.HWEditText
                    android:id="@+id/search_result_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionSearch"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/search_result_clear"
                    android:background="@color/transparent"
                    android:gravity="center|left"
                    android:hint="搜小说"
                    android:inputType="text"
                    android:singleLine="true"
                    android:cursorVisible="true"
                    app:HWEditText_textCursorDrawable="@drawable/search_edit_text_cursor"
                    android:textColor="@color/search_input_text_color1"
                    android:textColorHint="@color/search_input_text_color_hint1"
                    android:textSize="@dimen/dimen_text_14"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_result_head">
        
        <RelativeLayout
                android:id="@+id/search_result_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            
            <WebView
                    android:id="@+id/search_result_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            </WebView>
            

        </RelativeLayout>
        
        <FrameLayout
                android:id="@+id/search_result_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg">
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>