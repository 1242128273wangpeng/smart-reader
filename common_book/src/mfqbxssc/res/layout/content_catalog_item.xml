<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView
            android:id="@+id/catalog_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_15"
            android:textStyle="normal"/>
    
    <TextView
            android:id="@+id/catalog_chapter_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_gray_9C9C9C"
            android:textSize="12dp"
            android:textStyle="normal"/>
    
    <include
            android:id="@+id/catalog_chapter_divider"
            layout="@layout/dialog_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>