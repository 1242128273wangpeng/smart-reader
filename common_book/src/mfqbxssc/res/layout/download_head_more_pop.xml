<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_black_D9000000"
                android:id="@+id/download_head_pop_edit"
                android:background="@drawable/down_head_pop_item_bg_selector"
                android:clickable="true"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:text="编辑"
                android:soundEffectsEnabled="true"/>

        <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_black_D9000000"
                android:id="@+id/download_head_pop_sort_time"
                android:background="@drawable/down_head_pop_item_bg_selector"
                android:clickable="true"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:text="按更新时间排序"
                android:soundEffectsEnabled="true"/>

        <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_black_D9000000"
                android:id="@+id/download_head_pop_sort_read"
                android:background="@drawable/down_head_pop_item_bg_selector"
                android:clickable="true"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:text="按最后阅读排序"
                android:soundEffectsEnabled="true"/>
    </LinearLayout>
    <net.lzbook.kit.book.view.NightShadowView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/container"
            android:layout_alignRight="@+id/container"
            android:layout_alignBottom="@+id/container"
            android:layout_alignLeft="@+id/container"
            app:cornerRadius="4dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
