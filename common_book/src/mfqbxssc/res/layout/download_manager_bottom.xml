<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/divi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:background="@color/color_divider"/>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/remove_delete_layout"
            android:orientation="horizontal"
            android:layout_below="@+id/divi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_title_background"
            android:padding="@dimen/dimen_margin_10">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_35"
                    android:layout_marginLeft="@dimen/dimen_margin_10"
                    android:layout_marginRight="@dimen/dimen_margin_54"
                    android:background="@drawable/selector_button_gray_green"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="全选"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn_right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_35"
                    android:layout_marginLeft="@dimen/dimen_margin_10"
                    android:layout_marginRight="@dimen/dimen_margin_54"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/btn_dele_text_color"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true"
                    android:text="删除"/>
        </RelativeLayout>

    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/remove_delete_layout"
            android:layout_alignRight="@+id/remove_delete_layout"
            android:layout_alignBottom="@+id/remove_delete_layout"
            android:layout_alignLeft="@+id/remove_delete_layout"
            />
</RelativeLayout>