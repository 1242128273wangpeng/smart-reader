<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/home_title_background">

    <ListView
        android:id="@+id/download_manager_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/color_divider"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/empty_bookshelf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:gravity="center"
            android:text="暂无缓存书籍，去书城逛逛吧"
            android:textColor="@color/footprint_empty_hint_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/download_empty_btn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bookshelf_empty_find_bg"
            android:gravity="center"
            android:text="去书城"
            android:textColor="@drawable/cover_bottom_btn_text_selector"
            android:textSize="16sp"/>
    </RelativeLayout>
</FrameLayout>