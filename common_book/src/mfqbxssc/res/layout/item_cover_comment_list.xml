<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">


        <com.intelligent.reader.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:src="@mipmap/coverpage_icon_head1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_head">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/cover_recommend_read"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginTop="2dp"
                android:text="2018年3月21日 14:22"
                android:textColor="@color/cover_comment_time_color"
                android:textSize="10sp" />


            <com.intelligent.reader.view.ExpandInformation
                android:id="@+id/book_cover_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_time"
                app:informationMaxLines="4"
                app:informationIsFromComment="false"
                app:informationTextColor="@color/cover_comment_content_color"
                app:informationTextSize="@dimen/medium_size_14" />

            <!--<com.intelligent.reader.view.ExpandInformation-->
                <!--android:id="@+id/iv_more"-->
                <!--android:layout_below="@+id/tv_time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="免费全本小说书城免费全本小说书城免费全书城本小说书,书城免费全书城本小说书书城免费全书城本小说书城免费全本小说书城免费全本小说书城"-->
                <!--android:layout_marginRight="14dp"-->
                <!--app:informationMaxLines="3"-->
                <!--app:informationTextColor="@color/color_black"-->
                <!--app:informationTextSize="@dimen/large_size_22" />-->

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_view_height_0.5"
        android:layout_below="@+id/relative_parent"
        android:layout_marginTop="15dp"
        android:background="@color/cover_comment_divider_color" />

</RelativeLayout>