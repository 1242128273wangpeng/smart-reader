<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/book_shelf_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView
            android:id="@+id/bookshelf_item_layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GridThree"
            android:visibility="gone"/>
    
    <RelativeLayout
            android:id="@+id/bookshelf_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bookshelf__item_press_bg">
        
        <RelativeLayout
                android:id="@+id/book_shelf_image_view"
                android:layout_width="87dp"
                android:layout_height="@dimen/book_height"
                android:layout_marginTop="@dimen/dimen_margin_2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:padding="1dp"
                android:background="@drawable/book_shade">
            
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                
                <ImageView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/book_shelf_rectangle"/>
                
                <ImageView
                        android:id="@+id/book_shelf_image"
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3.5dp"
                        android:layout_marginLeft="3.5dp"
                        android:layout_marginBottom="4.2dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:background="@mipmap/bookshelf_book_cover_default"
                        android:src="@mipmap/bookshelf_book_cover_default"/>
            </FrameLayout>
            
            <TextView
                    android:id="@+id/book_shelf_unread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="@color/color_black_212121"
                    android:background="@color/color_black_88dddada"
                    android:textSize="@dimen/dimen_text_9"
                    android:visibility="gone"/>
            
            <ImageView
                    android:id="@+id/check_delete"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bookshelf_selected"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="18dp"
                    android:contentDescription="@string/app_name"/>
        </RelativeLayout>
        
        <ImageView
                android:id="@+id/book_shelf_status_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="1dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/book_end"
                android:visibility="gone"/>
        
        <ImageView
                android:id="@+id/book_shelf_status_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="1dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/book_new"
                android:visibility="visible"/>
        
        <LinearLayout
                android:id="@+id/ll_book_shelf_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/book_shelf_image_view"
                android:orientation="horizontal">
            
            <TextView
                    android:id="@+id/book_shelf_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:lines="2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/bookshelf_grid_book_name_text_color"
                    android:textSize="@dimen/dimen_text_12"/>
        </LinearLayout>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_book_shelf_title"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:visibility="gone"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="8dp">
            
            <TextView
                    android:id="@+id/book_shelf_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2014-08-14更新"
                    android:textColor="@color/bookshelf_update_time_grid_text_color"
                    android:textSize="@dimen/dimen_text_9"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>