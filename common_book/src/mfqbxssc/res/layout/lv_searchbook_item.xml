<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55.5dp"
        android:background="@drawable/bookshelf__item_press_bg">
    
    <TextView
            android:id="@+id/tv_search_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:textColor="@color/search_suggest_item_text_color_1"
            android:textSize="14sp"/>
    
    <TextView
            android:id="@+id/tv_search_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_search_item_1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="15dp"
            android:textColor="@color/search_suggest_item_text_color_2_1"
            android:textSize="14sp"/>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@color/search_divider"/>
</RelativeLayout>