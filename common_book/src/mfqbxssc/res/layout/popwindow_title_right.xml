<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:gravity="center"
    android:background="?attr/bookshelf_pop_9patch"
    android:orientation="vertical">

    <!--android:background="?attr/bookshelf_pop_9patch"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_huancun"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="?attr/bookshelf_paixu_top_select"
            android:gravity="center"

            android:paddingRight="21dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="?attr/bookshelf_pop_huancun_icon" />

            <TextView
                android:id="@+id/tv_car_empty"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="缓存管理"
                android:textColor="?attr/setting_login_font_color"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_paixu"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="?attr/bookshelf_paixu_select"
            android:gravity="center"
            android:paddingRight="21dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="?attr/bookshelf_pop_paicu_icon" />

            <TextView
                android:id="@+id/tv_car_half"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="?attr/setting_login_font_color"
                android:text="书籍排序"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>