<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_hot_title_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_root"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:text="大家都在搜"
                    android:textSize="16sp"
                    android:textColor="@color/color_search_recommend_title1"
                    android:layout_height="wrap_content"/>

            <com.intelligent.reader.view.ScrollForGridView
                    android:id="@+id/gridView"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:numColumns="2"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:id="@+id/search_line"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    android:layout_marginTop="25dp"
                    android:background="@color/color_search_divider"
                    android:layout_height="1dp"/>

            <RelativeLayout
                    android:id="@+id/relative_hot"
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_recommend"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:text="全站免费"
                        android:textSize="16sp"
                        android:textColor="@color/color_search_recommend_title1"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_recommend"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:src="@drawable/search_icon_suixinkang"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_recommed"
                    android:clipToPadding="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            <RelativeLayout
                    android:id="@+id/relative_hot1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_recommend1"
                        android:layout_centerVertical="true"
                        android:text="想读就读"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_search_recommend_title1"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_recommed1"
                    android:clipToPadding="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>