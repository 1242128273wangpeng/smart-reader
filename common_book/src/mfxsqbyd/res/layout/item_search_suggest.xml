<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:Tools="http://schemas.android.com/tools"
                xmlns:tools="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookshelf__item_press_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_margin_16">


    <RelativeLayout
        android:id="@+id/rl_book"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="56dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            Tools:background="@color/color_primary"/>

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="#001700"
            android:textSize="14sp"
            Tools:text="书名"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_name"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="#ADB4BE"
            android:textSize="12sp"
            Tools:text="作者"/>

        <ImageView
            android:id="@+id/iv_shadow"
            android:layout_width="35dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_feedback_close"
            android:visibility="gone"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_search_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:textSize="14sp"
        Tools:text="默默"/>

</RelativeLayout>