<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomPopupDialog">
        <item name="android:windowEnterAnimation">@anim/home_clear_cache_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/home_clear_cache_exit_anim</item>
    </style>
    
    <style name="style_read_option_linespace">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_read_option_group_border</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <!--设置页-左侧图标-文字-右侧按钮-->
    <style name="style_setting_icon_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_margin_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_margin_24</item>
        <item name="android:drawableRight">@mipmap/board_more_nor_icon</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!--设置页左侧带图标的item-->
    <style name="style_setting_text_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_margin_16</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!--设置页左侧带图标的item-->
    <style name="style_setting_switch_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--设置页分割线-->
    <style name="style_setting_line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dialog_line</item>
    </style>

    <!--Dialog框按钮-->
    <style name="style_dialog_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:minWidth">@dimen/dimen_view_width_24</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_plain</item>
    </style>

</resources>