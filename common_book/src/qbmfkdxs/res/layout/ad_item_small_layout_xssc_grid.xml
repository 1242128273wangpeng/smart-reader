<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ad_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf__item_press_bg">

    <RelativeLayout
        android:id="@+id/ad_imageview_rl"
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="@dimen/dimen_margin_2"
        android:padding="0.5dp"
        >

        <RelativeLayout
            android:id="@+id/item_ad_image_rl"
            android:layout_width="@dimen/dimen_view_width_64"
            android:layout_height="@dimen/dimen_view_height_64"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_margin_10"
            android:layout_marginRight="@dimen/dimen_margin_10"
            android:layout_marginTop="@dimen/dimen_margin_10"
            android:visibility="gone"></RelativeLayout>

        <ImageView
            android:id="@+id/item_ad_image"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_ad_right_down"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhuishu_ad" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_imageview_rl"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_ad_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_black_323232"
            android:textSize="@dimen/dimen_text_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_ad_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/color_gray_b3b3b3"
        android:textSize="@dimen/dimen_text_10" />

</RelativeLayout>