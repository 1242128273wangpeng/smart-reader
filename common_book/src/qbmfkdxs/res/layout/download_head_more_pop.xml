<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:cardCornerRadius="1dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/color_black_D9000000"
                    android:id="@+id/download_head_pop_edit"
                    android:background="@drawable/down_head_pop_item_bg_selector"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="编辑"
                    android:soundEffectsEnabled="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_gray_99e6e6e6"
                    />

            <TextView
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/color_black_D9000000"
                    android:id="@+id/download_head_pop_sort_time"
                    android:background="@drawable/down_head_pop_item_bg_selector"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="按更新时间排序"
                    android:soundEffectsEnabled="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_gray_99e6e6e6"
                    />

            <TextView
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/color_black_D9000000"
                    android:id="@+id/download_head_pop_sort_read"
                    android:background="@drawable/down_head_pop_item_bg_selector"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="按最后阅读排序"
                    android:soundEffectsEnabled="true"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
