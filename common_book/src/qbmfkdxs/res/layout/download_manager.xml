<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:orientation="vertical">
    
    <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_title_background"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
    
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height">
        
            <ImageView
                    android:id="@+id/title_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="@dimen/dimen_margin_2"
                    android:paddingRight="6dp"
                    android:paddingBottom="@dimen/dimen_margin_2"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/top_back_selector"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"/>

            <TextView
                    android:id="@+id/title_name_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="缓存管理"
                    android:textColor="@color/setting_login_font_color"
                    android:textSize="18sp"/>

            <ImageView
                    android:id="@+id/ibtn_more"
                    android:paddingLeft="@dimen/dimen_margin_12"
                    android:paddingTop="@dimen/dimen_margin_2"
                    android:paddingRight="17dp"
                    android:paddingBottom="@dimen/dimen_margin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_head_right_selector"
                    android:layout_alignParentRight="true"/>


            <TextView
                    android:id="@+id/edit_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dimen_margin_12"
                    android:paddingRight="@dimen/dimen_margin_20"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_14"
                    android:text="完成"/>

        </RelativeLayout>
    </RelativeLayout>
    
    <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_title_background"
            android:layout_below="@id/top_layout">
    </FrameLayout>
    
    <ImageView
            android:id="@+id/title_shadow"
            android:layout_below="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@mipmap/top_shadow"/>
</RelativeLayout>