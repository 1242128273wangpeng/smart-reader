<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dip"
                    android:color="@color/color_green_3ecc96"/>
            <solid android:color="@color/color_white_ffffff"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dip"
                    android:color="@color/color_gray_bebebe"/>
            <solid android:color="@color/color_gray_fafafa"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    
    <item>
        <shape>
            <solid android:color="@color/color_green_3ecc96"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>