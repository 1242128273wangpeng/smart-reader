<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/rl_item_content"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <ImageView
                android:id="@+id/img_book"
                android:layout_width="55dp"
                android:layout_height="75dp"
                android:layout_marginLeft="1dp"
                android:layout_centerVertical="true"
                android:src="@drawable/book_mask"
                android:scaleType="fitCenter"/>

        <ImageView
                android:id="@+id/download_manager_download_btn"
                android:paddingTop="4.5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_download_nostart"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:textSize="10sp"
                android:textColor="#3ECC96"
                android:ellipsize="end"
                android:id="@+id/download_manager_chapter_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存"
                android:singleLine="true"
                android:gravity="center"
                android:layout_alignBottom="@+id/download_manager_download_btn"
                android:layout_alignLeft="@+id/download_manager_download_btn"
                android:layout_alignRight="@+id/download_manager_download_btn"
                android:layout_alignTop="@+id/download_manager_download_btn"/>

        <TextView
                android:textSize="16sp"
                android:textColor="#303135"
                android:ellipsize="end"
                android:id="@+id/download_manager_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="凡人修仙传"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/download_manager_download_btn"
                android:layout_toRightOf="@+id/img_book"
                android:layout_alignTop="@+id/img_book"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_toRightOf="@+id/img_book"
                android:layout_marginLeft="10dp"
                android:layout_above="@+id/download_progress">

            <TextView
                    android:textSize="@dimen/dimen_text_12"
                    android:textColor="#999EA6"
                    android:id="@+id/download_manager_download_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缓存中"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <ProgressBar
                android:id="@+id/download_progress"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:progressDrawable="@drawable/bg_download_progressbar"
                android:layout_toLeftOf="@+id/download_manager_download_btn"
                android:layout_alignLeft="@+id/download_manager_bookname"
                android:layout_alignParentBottom="true"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </RelativeLayout>
</RelativeLayout>
