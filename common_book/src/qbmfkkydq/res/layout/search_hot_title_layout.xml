<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tv_search_title"
        style="@style/style_text_huge_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="@dimen/dimen_margin_16"
        android:paddingRight="@dimen/dimen_margin_16"
        android:text="大家都在搜"/>

    <net.lzbook.kit.ui.widget.ScrollForGridView
        android:id="@+id/grid_hot_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_margin_10"
        android:layout_marginRight="@dimen/dimen_margin_10"
        android:layout_marginTop="@dimen/dimen_margin_14"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/rl_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            style="@style/style_text_huge_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_margin_16"
            android:text="热门阅读"/>

        <TextView
            android:id="@+id/tv_change"
            style="@style/style_text_normal_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_margin_16"
            android:padding="4dp"
            android:text="换一换"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recommed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:clipToPadding="false"/>

</LinearLayout>