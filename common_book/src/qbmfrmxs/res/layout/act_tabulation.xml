<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_tabulation_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded, RtlSymmetry">

    <RelativeLayout
        android:id="@+id/rl_tabulation_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/img_tabulation_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/module_name"
                android:paddingLeft="16dp"
                android:src="@drawable/common_back_icon"/>

            <TextView
                android:id="@+id/txt_tabulation_title"
                style="@style/style_text_huge_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_tabulation_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="16dp"
                android:src="@drawable/nbar_search_nor_icon"/>
        </RelativeLayout>
    </RelativeLayout>

    <WebView
        android:id="@+id/wv_tabulation_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tabulation_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/rl_tabulation_header"
        android:background="@drawable/common_header_shadow_bg"/>

</RelativeLayout>