<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/rl_recommend_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/recommend_title_search_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/img_recommend"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/recommend_title_search_icon"
            />

        <TextView
            style="@style/style_text_normal_weak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/img_recommend"
            android:text="搜小说"/>

    </RelativeLayout>


    <View
        android:id="@+id/view_book_detail_header_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_recommend_search"
        android:background="@drawable/top_shadow"/>

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_recommend_search"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_hot"
            style="@style/style_text_normal_weak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/search_hot"
            />

        <com.intelligent.reader.view.ScrollForGridView
            android:id="@+id/sfgv_hot_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_hot"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:scrollbars="none"/>


        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/sfgv_hot_word"
            android:layout_marginTop="25dp"
            android:background="#f0f0f0"
            />

        <TextView
            android:id="@+id/txt_recommend_title"
            style="@style/style_text_large_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_hot_book_icon"
            android:gravity="center"
            android:text="@string/search_hot_book"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_recommend_title"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            />
    </RelativeLayout>
</RelativeLayout>