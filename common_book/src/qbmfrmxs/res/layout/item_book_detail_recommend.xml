<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText, RtlHardcoded">

    <ImageView
        android:id="@+id/img_recommend_cover"
        android:layout_width="84dp"
        android:layout_height="118dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/module_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bookshelf_book_cover_default"/>

    <TextView
        android:id="@+id/txt_recommend_name"
        style="@style/style_text_small_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_recommend_cover"
        android:layout_alignLeft="@id/img_recommend_cover"
        android:layout_alignRight="@id/img_recommend_cover"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        tools:text="@string/default_title"/>

    <TextView
        android:id="@+id/txt_recommend_popularity"
        style="@style/style_text_tiny_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_recommend_name"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/img_recommend_cover"
        android:layout_alignRight="@id/img_recommend_cover"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>