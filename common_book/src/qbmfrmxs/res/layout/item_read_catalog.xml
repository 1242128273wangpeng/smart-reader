<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/reader_cache_item_sel"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/chapter_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:textColor="@color/reading_setting_text_color"
            android:textSize="@dimen/text_size_14"
            android:layout_toLeftOf="@+id/chapter_cache_tv"
            android:text="chapter 1chapter 1"/>

    <TextView
            android:id="@+id/chapter_cache_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_light"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_12"
            android:text="已缓存"/>
</RelativeLayout>
