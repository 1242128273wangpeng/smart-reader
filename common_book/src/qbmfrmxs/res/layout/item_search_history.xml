<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bookshelf__item_press_bg"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:scaleType="center"
        android:src="@drawable/icon_search_history"/>

    <TextView
        android:id="@+id/txt_his_word"
        style="@style/style_text_normal_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_margin_8"
        android:layout_toRightOf="@id/img_label"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="默默"/>


    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"

        android:scaleType="center"
        android:src="@drawable/search_history_clear_icon"/>

</RelativeLayout>