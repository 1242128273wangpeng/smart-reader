<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<TextView
        android:id="@+id/btn_login"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll_login_ignore"
        android:layout_marginBottom="11.5dp"
        android:text="一键登录"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/bcl_guide_login_selector"
        />
    <LinearLayout
            android:id="@+id/ll_login_ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41.5dp"
            android:background="@drawable/txt_login_ignore_bg1"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_login_ignore"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="以后再说"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:src="@drawable/bcl_guide_ignore_right"/>
    </LinearLayout>

</RelativeLayout>