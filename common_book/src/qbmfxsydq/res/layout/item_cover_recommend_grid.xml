<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/bookshelf_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        >

        <RelativeLayout
            android:id="@+id/book_shelf_image_view"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:padding="1dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="128dp">

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="128dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/cover_recommend_bg"/>

                <ImageView
                    android:id="@+id/iv_recommend_image"
                    android:layout_width="87dp"
                    android:layout_height="120dp"
                    android:paddingBottom="4.3dp"
                    android:paddingLeft="1dp"
                    android:paddingTop="0.5dp"
                    android:paddingRight="0.5dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/book_cover_default"/>
            </FrameLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_below="@+id/book_shelf_image_view"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="15dp"
            android:textColor="#282828"
            android:textSize="13sp"/>



    </RelativeLayout>
</RelativeLayout>