<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginLeft="9dp"
                android:paddingTop="@dimen/search_recommend_margin_top"
                android:paddingBottom="@dimen/search_recommend_bottom"
                android:layout_marginRight="9dp"
                android:gravity="center"
                android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/iv_card"
            android:layout_width="@dimen/search_book_width"

            android:layout_height="@dimen/search_book_height">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/book_shelf_rectangle"/>

        <ImageView
                android:id="@+id/iv_url"
                android:layout_width="match_parent"


                android:scaleType="fitXY"
                android:layout_height="match_parent"/>
    </FrameLayout>


    <TextView
            android:id="@+id/tv_book_name"
            tools:text="青果作家"
            android:textColor="@color/color_search_recommend_title"
            android:layout_below="@+id/iv_card"
            android:textSize="14sp"
            android:layout_width="@dimen/search_book_width"
            android:layout_marginTop="@dimen/search_recommend_bottom"
            android:ellipsize="end"

            android:singleLine="true"
            android:layout_height="wrap_content"/>


</RelativeLayout>

