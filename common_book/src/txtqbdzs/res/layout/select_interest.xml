<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txt_step_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_step_in_bg"
        android:paddingLeft="11dp"
        android:paddingTop="3dp"
        android:paddingRight="11dp"
        android:paddingBottom="3dp"
        android:text="跳过"
        android:textColor="#B9B9B9"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_step_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="选择喜欢的类型"
        android:textColor="#282828"
        android:textSize="28sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="30dp"
        android:overScrollMode="never"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none"
        />

    <TextView
        android:id="@+id/txt_confirm"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_below="@id/rv_interest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/selector_interest_confirm_bg"
        android:gravity="center"
        android:text="我选好了"
        android:textColor="#616161"
        android:textSize="17sp"
        />

</RelativeLayout>