<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/dimen_radius_10"/>
            <!--<stroke android:width="@dimen/dimen_view_width_1" android:color="@color/color_gray_b0b5b9"/>-->
            <solid android:color="@color/download_cache_background"/>
        </shape>
    </item>

    <!-- 第二条进度条颜色 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/dimen_radius_10"/>
                <gradient
                        android:angle="90.0"
                        android:centerColor="@color/theme_primary"
                        android:centerY="0.45"
                        android:endColor="@color/theme_primary"
                        android:startColor="@color/theme_primary"/>
            </shape>
        </clip>
    </item>
    <!-- 进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/dimen_radius_10"/>
                <solid android:color="@color/theme_primary"/>
            </shape>
        </clip>
    </item>

</layer-list>