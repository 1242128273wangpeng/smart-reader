<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/home_bookshelf_parent_unselected_color"/>
            <stroke android:width="1dip"
                    android:color="@color/home_bookshelf_parent_unselected_color"/>
            <corners
                    android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/home_bookshelf_parent_selected_color"/>
            <stroke android:width="1dip"
                    android:color="@color/home_bookshelf_parent_selected_color"/>
            <corners
                    android:radius="2dp"/>
        </shape>
    </item>
</selector>