<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="?attr/base_bg">
    
    <RelativeLayout
            android:id="@+id/rl_title_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:layout_alignParentTop="true"
            android:translationZ="1dp"
            android:background="?attr/top_navigation_bg_color">
        
        <ImageButton
                android:id="@+id/ibtn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@android:color/transparent"
                android:src="?attr/title_back"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="登 录"
                android:textColor="?attr/top_navigation_text_color"
                android:textSize="18sp"/>
    </RelativeLayout>
    
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="16dp">-->

    <RelativeLayout
            android:id="@+id/cstl_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_spell_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TXTquanbenmianfeixiaoshuo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="#7d7d7d"
                android:textSize="9sp"
        />

        <LinearLayout
                android:id="@+id/ll_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_spell_bottom"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:src="?attr/login_btn_qq1"
                    android:id="@+id/ibtn_qq"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:background="#00000000"
            />

            <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="38dp"
                    android:src="?attr/login_btn_wechat1"
                    android:id="@+id/ibtn_wechat"
                    android:scaleType="centerCrop"
                    android:background="#00000000"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="30dp"/>
        </LinearLayout>


        <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/icon"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop"
                android:layout_marginTop="91dp"
                android:layout_centerHorizontal="true"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T X T 全 本 免 费 小 说"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView2"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:textColor="#7d7d7d"
        />

        <LinearLayout
                android:id="@+id/txt_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_login_btn"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
        >
            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/color_text_content1"/>
            <TextView
                    android:text="登 录 方 式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="?attr/color_text_content"
            />
            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/color_text_content1"/>
        </LinearLayout>
    </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>