<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_bg"
    tools:ignore="RtlHardcoded,RtlSymmetry">


    <ImageView
        android:id="@+id/img_content"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/push_setting_dialog_content_icon"/>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/push_setting_dialog_close_icon"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="@string/push_setting_dialog_title"
        android:textColor="#282828"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="36.5dp"
        android:layout_marginRight="36.5dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:text="@string/push_setting_dialog_subtitle"
        android:textColor="#616161"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_open_push"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/txt_subtitle"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/push_setting_action_bg"
        android:gravity="center"
        android:text="@string/push_setting_dialog_action"
        android:textColor="@color/color_primary"
        android:textSize="14sp"/>

</RelativeLayout>