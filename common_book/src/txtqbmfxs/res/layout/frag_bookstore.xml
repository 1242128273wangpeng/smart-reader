<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <net.lzbook.kit.ui.widget.NonSwipeViewPager
        android:id="@+id/vp_book_store_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

    <LinearLayout
        android:id="@+id/bookstore_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_margin_5"
        android:background="@color/base_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_store_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_tab_select_recommend"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5"
            android:text="@string/recommend"
            android:textColor="@drawable/home_bottom_tab_text_color_selector"
            android:textSize="@dimen/dimen_text_10"/>

        <TextView
            android:id="@+id/tv_book_store_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_tab_select_ranking"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5"
            android:text="@string/ranking"
            android:textColor="@drawable/home_bottom_tab_text_color_selector"
            android:textSize="@dimen/dimen_text_10"/>

        <TextView
            android:id="@+id/tv_book_store_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_tab_select_book_list"
            android:gravity="center"
            android:text="@string/book_list"
            android:textColor="@drawable/home_bottom_tab_text_color_selector"
            android:textSize="@dimen/dimen_text_10"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_book_store_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_tab_select_category"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5"
            android:text="@string/category"
            android:textColor="@drawable/home_bottom_tab_text_color_selector"
            android:textSize="@dimen/dimen_text_10"/>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:background="@color/dialog_line"/>


</FrameLayout>