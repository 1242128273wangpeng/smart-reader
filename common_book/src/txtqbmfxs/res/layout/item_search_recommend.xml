<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@drawable/bookshelf__item_press_bg"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/relative_main"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/search_recommend_padding"
            android:paddingBottom="@dimen/search_recommend_padding"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:id="@+id/iv_card"
                android:layout_width="56dp"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                app:cardElevation="3dp"
                android:layout_height="80dp">

            <ImageView
                    android:id="@+id/iv_url"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-3dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/iv_card"
                android:layout_toRightOf="@+id/iv_card"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_book_name"
                    tools:text="青果作家招募青果作家招募青果作家招募青果作家招募青果作家招募青果作家招募青果作家招募"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_card"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"/>
                    <!--android:textColor="@color/color_search_recommend_title"-->

            <TextView
                    android:id="@+id/tv_author"
                    tools:text="青果作家招募"

                    android:layout_centerVertical="true"
                    android:textColor="@color/search_recommend_author_color"
                    android:layout_toRightOf="@+id/iv_card"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/search_recommend_bookname_padding"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/search_recommend_author_padding"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_status"
                        tools:text="连载中"
                        android:layout_centerVertical="true"
                        android:textColor="@color/search_recommend_lianzai_color"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="4dp"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:textSize="10sp"
                        android:background="@drawable/search_recommend_lianzai_bg"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_score"
                        tools:text="9.5分"
                        android:layout_centerVertical="true"
                        android:textColor="@color/search_recommend_author_color"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:background="@drawable/search_recommend_color_bg"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_read_num"
                        tools:text="77.2万人在读"
                        android:layout_centerVertical="true"
                        android:textColor="@color/search_recommend_author_color"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="1dp"
                        android:layout_toLeftOf="@+id/tv_score"
                        android:paddingBottom="1dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="5dp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@drawable/search_recommend_color_bg"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_type"
                        tools:text="言情"
                        android:layout_centerVertical="true"
                        android:textColor="@color/search_recommend_author_color"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:paddingTop="1dp"
                        android:layout_toLeftOf="@+id/tv_read_num"
                        android:paddingBottom="1dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:textSize="10sp"
                        android:background="@drawable/search_recommend_color_bg"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:layout_below="@+id/relative_main"
            />
    <!--android:background="@color/color_search_divider"-->
</RelativeLayout>

