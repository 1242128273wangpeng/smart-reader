<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/bookshelf__item_press_bg"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dimen_view_width_25"
        android:layout_height="@dimen/dimen_view_height_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:scaleType="center"
        android:src="@drawable/search_label_icon"/>

    <TextView
        android:id="@+id/tv_search_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_margin_10"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="默默"
        android:textColor="@color/color_black"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/search_enter"/>

</RelativeLayout>