<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"

             android:scrollbars="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/read_dialog_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/read_option_bg"
                android:orientation="vertical">

        <TextView
                android:textSize="18sp"
                android:textColor="@color/read_option_text"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="15dp"
                android:text="缓存方式"/>

        <TextView
                android:textSize="14sp"
                android:textColor="@drawable/read_option_txt_click_color"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/reading_all_down"
                android:background="@drawable/read_option_border_bg_click"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:text="@string/reading_all_down"/>

        <TextView
                android:textSize="14sp"
                android:textColor="@drawable/read_option_txt_click_color"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/reading_current_down"
                android:background="@drawable/read_option_border_bg_click"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginBottom="@dimen/padding_10"
                android:text="@string/reading_current_down"/>

        <TextView
                android:textSize="16sp"
                android:textColor="@drawable/read_option_txt_click_color"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/reading_cache_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/cancel"/>
    </LinearLayout>
</LinearLayout>
        </FrameLayout>
