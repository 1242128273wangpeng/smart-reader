<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/novel_head_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_black_1d1d1c"
                android:clickable="true"
                android:paddingTop="@dimen/dimen_padding_20">

    <RelativeLayout
            android:id="@+id/reading_head_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_50">

        <ImageView
                android:id="@+id/novel_read_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dimen_padding_5"
                android:paddingLeft="@dimen/dimen_padding_10"
                android:paddingRight="@dimen/dimen_padding_10"
                android:paddingTop="@dimen/dimen_padding_5"
                android:src="@drawable/icon_back_light"/>

        <ImageView
                android:id="@+id/novel_automatic_reading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_padding_10"
                android:paddingRight="@dimen/dimen_padding_10"
                android:src="@drawable/icon_automatic_reading"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/novel_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dimen_padding_10"
                android:paddingRight="@dimen/dimen_padding_10"
                android:src="@drawable/light_bookmark_selector"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/novel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_margin_10"
                android:layout_marginRight="@dimen/dimen_margin_10"
                android:layout_toLeftOf="@id/novel_bookmark"
                android:layout_toRightOf="@id/novel_read_back"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dimen_padding_5"
                android:paddingTop="@dimen/dimen_padding_5"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/color_gray_cbcbcb"
                android:textSize="@dimen/dimen_text_16"/>
    </RelativeLayout>

    <View
            android:id="@+id/reading_head_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_0.5"
            android:layout_below="@id/reading_head_content"
            android:background="@color/color_black_2c2b2b"/>

    <TextView
            android:id="@+id/novel_source_url"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_view_height_35"
            android:layout_below="@id/reading_head_divider"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_padding_12"
            android:paddingRight="@dimen/dimen_padding_12"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_gray_d4d3d3"
            android:textSize="@dimen/dimen_text_14"/>
</RelativeLayout>