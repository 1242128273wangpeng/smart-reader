<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg">

    <RelativeLayout
            android:id="@+id/search_result_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:fitsSystemWindows="true"
            android:background="@color/top_navigation_bg_color">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height">

            <ImageView
                    android:id="@+id/search_result_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dimen_padding_16"
                    android:src="@drawable/nbar_back_icon"/>

            <RelativeLayout
                    android:id="@+id/search_result_outcome"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_view_height_30"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/search_result_button"
                    android:layout_toRightOf="@+id/search_result_back"
                    android:background="@drawable/search_input_bg"
                    android:visibility="visible">

                <TextView
                        android:id="@+id/search_result_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_margin_10"
                        android:gravity="center|right"
                        android:singleLine="true"
                        android:textColor="@color/search_input_text_color"
                        android:textSize="@dimen/dimen_text_16"/>

                <TextView
                        android:id="@+id/search_result_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_margin_10"
                        android:layout_toLeftOf="@id/search_result_count"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:textColor="@color/search_input_text_color"
                        android:textSize="14sp"/>
            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/search_result_default"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_view_height_30"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/search_result_button"
                    android:layout_toRightOf="@id/search_result_back"
                    android:background="@drawable/search_input_bg"
                    android:visibility="visible">

                <ImageView
                        android:id="@+id/search_result_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center"
                        android:contentDescription="@string/app_name"
                        android:paddingLeft="@dimen/dimen_padding_10"
                        android:scaleType="fitCenter"
                        android:src="@drawable/search_edit_clear"
                        android:visibility="visible"/>

                <net.lzbook.kit.widget.HWEditText
                        android:id="@+id/search_result_input"
                        style="@style/style_text_normal_plain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/search_result_clear"
                        android:background="@color/transparent"
                        android:gravity="center|left"
                        android:hint="搜小说"
                        android:inputType="text"
                        android:singleLine="true"
                        android:cursorVisible="true"
                        app:HWEditText_textCursorDrawable="@drawable/search_edit_text_cursor"
                        android:textColorHint="@color/search_input_text_color_hint"/>
            </RelativeLayout>

            <ImageView
                    android:id="@+id/search_result_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="@dimen/dimen_padding_7"
                    android:paddingRight="@dimen/dimen_padding_12"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/nbar_search_nor_icon"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_result_head">

        <RelativeLayout
                android:id="@+id/search_result_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.intelligent.reader.widget.topshadow.TopShadowWebView
                    android:id="@+id/search_result_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </RelativeLayout>

        <FrameLayout
                android:id="@+id/search_result_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg">
        </FrameLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_head_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_head"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/top_shadow_bg"/>
</RelativeLayout>