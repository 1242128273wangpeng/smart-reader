<?xml version="1.0" encoding="utf-8"?>
<com.intelligent.reader.widget.drawer.DrawerMain
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/top_navigation_bg_color">

        <ImageView
            android:id="@+id/img_head_setting"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/nbar_personal_nor_icon"/>

        <net.lzbook.kit.book.view.FirstUsePointView
            android:id="@+id/red_point_head_setting"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_alignRight="@+id/img_head_setting"
            android:layout_alignTop="@+id/img_head_setting"
            android:background="@color/color_red_point"/>

        <TextView
            android:id="@+id/txt_head_title"
            style="@style/style_text_huge_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            tools:text="书架"/>

        <ImageView
            android:id="@+id/content_head_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/content_download_manage"
            android:scaleType="fitXY"
            android:src="@mipmap/nbar_search_nor_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/content_download_manage"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13.5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_head_download"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_head_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/img_head_menu"
            android:scaleType="fitXY"
            android:src="@mipmap/nbar_search_nor_icon"/>

        <ImageView
            android:id="@+id/img_head_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/nbar_more_nor_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_head_editor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignBottom="@+id/rl_head"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/rl_head"
        android:background="@color/top_navigation_bg_color"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            style="@style/style_text_huge_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/bookshelf_edit_title"/>

        <TextView
            android:id="@+id/txt_editor_select_all"
            style="@style/style_text_normal_plain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/select_all"/>

    </RelativeLayout>

    <net.lzbook.kit.book.view.NonSwipeViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/content_tab_selection"
        android:layout_below="@id/rl_head"
        android:flipInterval="30"
        android:background="@color/base_bg"
        android:persistentDrawingCache="animation"/>

    <!--<ImageView-->
        <!--android:id="@+id/img_head_shadow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/rl_head"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/top_shadow_bg"/>-->

    <!--<ImageView-->
        <!--android:id="@+id/img_bottom_shadow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/content_tab_selection"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/bottom_shadow_bg"/>-->

    <LinearLayout
        android:id="@+id/content_tab_selection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bottom_tab_bookshelf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_bookshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="1dp"
                android:src="@drawable/home_tab_select_bookshelf"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookshelf"
                android:textColor="@drawable/home_bottom_tab_text_color_selector"
                android:textSize="@dimen/dimen_text_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="1dp"
                android:src="@drawable/home_tab_select_recommend"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend"
                android:textColor="@drawable/home_bottom_tab_text_color_selector"
                android:textSize="@dimen/dimen_text_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="1dp"
                android:src="@drawable/home_tab_select_ranking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking"
                android:textColor="@drawable/home_bottom_tab_text_color_selector"
                android:textSize="@dimen/dimen_text_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:padding="1dp"
                android:src="@drawable/home_tab_select_category"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@drawable/home_bottom_tab_text_color_selector"
                android:textSize="@dimen/dimen_text_10"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_guide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_guide_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_margin_63"
            android:scaleType="fitXY"
            android:src="@drawable/icon_bookshelf_guide_download"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_guide_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dimen_padding_30"
            android:layout_marginTop="314dp"
            android:scaleType="fitXY"
            android:src="@drawable/bookshelf_guide_remove"
            android:visibility="gone"/>
    </FrameLayout>
</com.intelligent.reader.widget.drawer.DrawerMain>