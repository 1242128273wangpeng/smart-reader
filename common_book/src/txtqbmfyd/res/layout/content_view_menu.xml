<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/txt_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/text_color_dark"
        android:textSize="20sp"/>

    <TextView
        style="@style/style_text_small_weak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:text="@string/string_home_menu_desc"/>

    <RelativeLayout
        android:id="@+id/rl_night_shift"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp">

        <TextView
            android:id="@+id/tv_night_shift"
            style="@style/style_text_normal_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/night_shift"/>

        <com.intelligent.reader.widget.SwitchButton
            android:id="@+id/bt_night_shift"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:sb_checked_color="#6619DD8B"
            app:sb_checkedbtn_color="#FF19DD8B"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#66ADB4BE"
            app:sb_uncheckedbtn_color="#FFADB4BE"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_auto_download"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/txt_auto_download"
            style="@style/style_text_normal_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/auto_download"/>

        <com.intelligent.reader.widget.SwitchButton
            android:id="@+id/btn_auto_download"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:sb_checked_color="#6619DD8B"
            app:sb_checkedbtn_color="#FF19DD8B"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#66ADB4BE"
            app:sb_uncheckedbtn_color="#FFADB4BE"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_push_setting"
        style="@style/style_text_normal_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@mipmap/board_more_nor_icon"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="20dp"
        android:text="@string/push_setting"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/txt_feedback"
        style="@style/style_text_normal_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@mipmap/board_more_nor_icon"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="20dp"
        android:text="@string/menu_feedback"
        android:textColor="@color/color_text_most"/>

    <TextView
        android:id="@+id/txt_mark"
        style="@style/style_text_normal_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@mipmap/board_more_nor_icon"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="20dp"
        android:text="@string/market_go"
        android:textColor="@color/color_text_most"/>

    <TextView
        android:id="@+id/txt_disclaimer_statement"
        style="@style/style_text_normal_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@mipmap/board_more_nor_icon"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="20dp"
        android:text="@string/disclaimer_statement"
        android:textColor="@color/color_text_most"/>

    <RelativeLayout
        android:id="@+id/rl_check_update"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/txt_check_update"
            style="@style/style_text_normal_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/check_update"/>

        <TextView
            android:id="@+id/txt_version_name"
            style="@style/style_text_small_weak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            tools:text="V1.2.9"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/txt_clear_cache"
            style="@style/style_text_normal_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/clear_cache"/>

        <TextView
            android:id="@+id/txt_clear_cache_message"
            style="@style/style_text_small_weak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            tools:text="23.56MB"/>
    </RelativeLayout>

</LinearLayout>
