<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/download_manager_item_uncheck_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:translationX="00dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txt_web_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载中"
                android:textColor="#212832"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_source_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="http://"
                    android:layout_weight="1"
                    android:maxLength="16"
                    android:textColor="#8D939D"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.06.20   03:12"
                    android:textColor="#8D939D"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="#EAEBEF"/>
</LinearLayout>