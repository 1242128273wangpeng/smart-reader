<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_book_cover_shadow"
            android:layout_width="92dp"
            android:layout_height="140dp"
            android:src="@drawable/bookshelf_book_cover_shadow_bg"/>


        <com.intelligent.reader.widget.BorderImageView
            android:id="@+id/img_book_cover"
            android:layout_width="80dp"
            android:layout_height="113dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/bookshelf_book_cover_default"/>

        <ImageView
            android:id="@+id/img_book_state_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/bookshelf_book_state_finish_icon"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_book_state_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/bookshelf_book_state_update_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_book_name"
            style="@style/style_text_small_plain"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@+id/img_book_cover"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="书名书名书名书名书名书名"/>

        <ImageView
            android:id="@+id/img_check_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/bookshelf_edit_unselected_icon"
            android:visibility="visible"
            tools:ignore="RtlHardcoded"/>

        <View
            android:layout_width="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/book_cover_sel"
            android:layout_height="113dp"/>

    </RelativeLayout>

</RelativeLayout>