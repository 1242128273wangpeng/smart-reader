<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/down_head_pop_item_bg_sel"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:soundEffectsEnabled="true"
            android:text="@string/download_manager_editor_title"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/txt_time_sorting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/down_head_pop_item_bg_sel"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:soundEffectsEnabled="true"
            android:text="@string/update_time_sorting"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txt_recent_read_sorting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/down_head_pop_item_bg_sel"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:soundEffectsEnabled="true"
            android:text="@string/recent_read_sorting"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
