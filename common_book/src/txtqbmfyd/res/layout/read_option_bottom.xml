<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/novel_bottom_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix">

    <ImageView
            android:id="@+id/night_mode_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/function_layout"
            android:src="@drawable/icon_read_day"
            android:layout_height="wrap_content"/>


    <FrameLayout
            android:id="@+id/function_layout"
            android:layout_above="@+id/reading_foot_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/read_option_reading_info"/>

        <include
                android:visibility="gone"
                layout="@layout/read_option_mode"/>

        <include
                android:visibility="gone"
                layout="@layout/read_option_font"/>

        <include
                android:visibility="gone"
                layout="@layout/read_option_background"/>

        <net.lzbook.kit.book.view.NightShadowView
                android:id="@+id/function_layout_shadowView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
            android:id="@+id/reading_foot_options"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav2"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:background="@color/read_option_txtmfqbyd_bg"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,UselessParent">

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />

        <RelativeLayout
                android:id="@+id/novel_catalog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


            <ImageButton
                    android:id="@+id/ibtn_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    app:onPressChangeAlpha="true"
                    android:src="@drawable/read_option_catalog"/>
        </RelativeLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"
                />

        <RelativeLayout
                android:id="@+id/novel_read_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

            <ImageButton
                    android:id="@+id/read_mode_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    app:onPressChangeAlpha="true"
                    android:src="@drawable/icon_read_mode_normal"/>
        </RelativeLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"/>

        <RelativeLayout
                android:id="@+id/novel_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


            <ImageButton
                    android:id="@+id/bg_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    app:onPressChangeAlpha="true"
                    android:src="@drawable/icon_read_bg_normal"/>
        </RelativeLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="match_parent"/>

        <RelativeLayout
                android:id="@+id/novel_font"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


            <ImageButton
                    android:id="@+id/font_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    app:onPressChangeAlpha="true"
                    android:src="@drawable/icon_read_font_normal"/>
        </RelativeLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav2"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
</RelativeLayout>