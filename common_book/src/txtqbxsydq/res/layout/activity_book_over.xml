<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg"
        android:orientation="vertical"
        android:paddingTop="0dp">
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_alignParentTop="true"
            android:background="@color/color_primary">
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height">
            
            <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/padding_16"
                    android:src="@mipmap/cover_top_back"/>
            
            <TextView
                    android:id="@+id/name_bookend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/top_navigation_text_color"
                    android:text="@string/read_end_tip"
                    android:textSize="@dimen/large_size_18"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView"
                    android:layout_toRightOf="@+id/iv_back"/>
            
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:visibility="invisible"
                    android:paddingRight="@dimen/padding_16"
                    android:src="@mipmap/cover_top_back"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height_0.5"
            android:background="@color/color_divider"/>
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        
        <LinearLayout
                android:id="@+id/over_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp">
            
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/padding_0"
                    android:layout_marginRight="@dimen/padding_0"
                    android:layout_marginTop="10dp">
                
                <ImageView
                        android:id="@+id/ad_view"
                        android:paddingLeft="@dimen/dimen_padding_10"
                        android:paddingRight="@dimen/dimen_padding_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                
                <ImageView
                        android:id="@+id/ad_view_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_padding_10"/>
            
            </RelativeLayout>
            
            <TextView
                    android:id="@+id/textView_endInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginTop="@dimen/padding_10"
                    android:text="@string/book_end_info"
                    android:textColor="@color/changesource_text_color"
                    android:textSize="@dimen/text_size_16"/>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_height_0.5"
                    android:background="@color/color_divider"/>
            
            <ListView
                    android:id="@+id/sourcelist_bookend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_divider"
                    android:dividerHeight="@dimen/dimen_view_height_0.5"
                    android:background="@color/base_bg">
            </ListView>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_height_0.5"
                    android:background="@color/color_divider"/>
            
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true">
                
                <LinearLayout
                        android:layout_marginBottom="@dimen/padding_5"
                        android:layout_marginTop="@dimen/padding_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                        
                        <TextView
                                android:id="@+id/iv_title_right"
                                android:layout_width="130dp"
                                android:layout_height="40dp"
                                android:background="@drawable/book_end_btn_selector_bookshelf"
                                android:gravity="center"
                                android:text="@string/end_to_bookshelf"
                                android:textColor="@drawable/book_end_text_selector_bookshelf"
                                android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                        
                        <TextView
                                android:id="@+id/iv_back_bookstore"
                                android:layout_width="130sp"
                                android:layout_height="40dp"
                                android:background="@drawable/book_end_btn_selector_bookstore"
                                android:gravity="center"
                                android:text="@string/end_to_bookstore"
                                android:textColor="@drawable/book_end_text_selector_bookstore"
                                android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_height_0.5"
                android:background="?attr/color_divider"/>-->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:id="@+id/view"
                    android:background="@color/color_divider_item"/>
