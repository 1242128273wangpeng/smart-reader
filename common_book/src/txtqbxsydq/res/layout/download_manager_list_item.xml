<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <RelativeLayout
            android:id="@+id/rl_item_content"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:background="@color/download_manager_lv_bg_color">
        
        <ImageView
                android:id="@+id/download_manager_download_btn"
                android:layout_width="@dimen/dimen_view_width_60"
                android:layout_height="match_parent"
                android:paddingRight="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_margin_17"
                android:src="@drawable/icon_download_nostart"/>
        
        <LinearLayout
                android:id="@+id/download_manager_click_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/download_manager_download_btn"
                android:orientation="vertical">
            
            <TextView
                    android:id="@+id/download_manager_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="凡人修仙传"
                    android:textColor="@color/download_manager_book_name_color"
                    android:textSize="@dimen/text_big16_size"/>
            
            <ProgressBar
                    android:id="@+id/download_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_view_height_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:progressDrawable="@drawable/bg_download_progressbar"/>
            
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">
                
                <TextView
                        android:id="@+id/download_manager_download_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="正在缓存"
                        android:textColor="@color/download_manager_other_tag_color"
                        android:textSize="@dimen/dimen_text_12"/>
                
                <TextView
                        android:id="@+id/download_manager_chapter_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="111/2334章"
                        android:textColor="@color/download_manager_other_tag_color"
                        android:textSize="@dimen/dimen_text_12"/>
            </RelativeLayout>
        
        </LinearLayout>
    </RelativeLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height_0.5"
            android:layout_below="@+id/rl_item_content"
            android:background="@color/color_divider"/>
</RelativeLayout>