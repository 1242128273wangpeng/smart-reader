<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/book_shelf_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
    <TextView
            android:id="@+id/bookshelf_item_layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GridOne"
            android:visibility="gone"/>
    
    <RelativeLayout
            android:id="@+id/bookshelf_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bookshelf_item_press_bg">
        
        <RelativeLayout
                android:id="@+id/book_shelf_image_view"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="@dimen/dimen_margin_22"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:background="@drawable/book_shade">
            
            <ImageView
                    android:id="@+id/book_shelf_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:background="@mipmap/bookshelf_book_cover_default"
                    android:src="@mipmap/bookshelf_book_cover_default"/>
            
            <TextView
                    android:id="@+id/book_shelf_unread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="@color/color_black_212121"
                    android:background="@color/color_black_88dddada"
                    android:textSize="@dimen/dimen_text_9"
                    android:visibility="gone"/>
        </RelativeLayout>
        
        <ImageView
                android:id="@+id/book_shelf_status_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bookshelf_book_status_finish_grid_1"
                android:visibility="gone"/>
        
        <ImageView
                android:id="@+id/book_shelf_status_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bookshelf_book_status_update_grid_1"
                android:visibility="visible"/>
        
        <LinearLayout
                android:id="@+id/ll_book_shelf_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/book_shelf_image_view"
                android:orientation="horizontal">
            
            <TextView
                    android:id="@+id/book_shelf_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/color_gray_bbbbbb"
                    android:textSize="@dimen/dimen_text_12"/>
        </LinearLayout>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_book_shelf_title"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="8dp">
            
            <TextView
                    android:id="@+id/book_shelf_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2014-08-14更新"
                    android:textColor="@color/color_gray_5e5e5e"
                    android:textSize="@dimen/dimen_text_9"/>
        </RelativeLayout>
    </RelativeLayout>
    
    <ImageView
            android:id="@+id/check_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_delete_checked"
            android:layout_marginRight="20.5dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/app_name"
            android:visibility="visible"/>
</RelativeLayout>