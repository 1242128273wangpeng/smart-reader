                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/iv_mine_image_left"
                    android:layout_toRightOf="@+id/iv_mine_image_left"
