<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_shelf_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bookshelf_item_layout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridTwo"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/bookshelf_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_margin_5"
        android:background="?attr/bookshelf_item_press_bg">

        <RelativeLayout
            android:id="@+id/book_shelf_image_view"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="@dimen/dimen_margin_15"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="19dp"
            android:padding="0.5dp"
            android:background="?attr/book_shelf_image_mark">

            <ImageView
                android:id="@+id/book_shelf_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:background="?attr/bookshelf_book_cover_default"
                android:src="?attr/bookshelf_book_cover_default" />
            <TextView
                android:id="@+id/book_shelf_unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="@color/color_white"
                android:background="@color/color_black_aa000000"
                android:textSize="@dimen/dimen_text_9"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/book_shelf_status_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="15.5dp"
            android:layout_marginRight="19.5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bookshelf_book_status_finish_grid_2"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_book_shelf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/book_shelf_image_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_shelf_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="?attr/bookshelf_grid_book_name_text_color_2"
                android:textSize="@dimen/dimen_text_14" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_book_shelf_title"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="8dp">
            <ImageView
                android:id="@+id/book_shelf_status_update"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/bookshelf_book_status_update_grid_2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/book_shelf_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_shelf_status_update"
                android:singleLine="true"
                android:text="2014-08-14更新"
                android:textColor="?attr/bookshelf_update_time_grid_text_color_2"
                android:textSize="@dimen/dimen_text_10" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/check_delete"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_delete_checked"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/app_name"
        android:visibility="visible" />

</RelativeLayout>

