<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="7dp">

        <TextView
                android:id="@+id/listheader_searchhelper_history_tagstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:text="大家都在搜"
                android:textColor="?attr/search_hot_word_title_text_color"
                android:textSize="16sp"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/hotword_container_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/text_hotword_style"/>
            <TextView
                    style="@style/text_hotword_style"/>
            <TextView
                    style="@style/text_hotword_style"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/text_hotword_style"/>
            <TextView
                    style="@style/text_hotword_style"/>
            <TextView
                    style="@style/text_hotword_style"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/text_hotword_style"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_7"
                    android:layout_marginBottom="@dimen/margin_7"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_marginRight="@dimen/margin_3"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_7"
                    android:layout_marginBottom="@dimen/margin_7"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_marginRight="@dimen/margin_3"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height_0.5"
            android:layout_marginTop="@dimen/margin_7"
            android:background="?attr/color_divider"/>
    <LinearLayout
            android:id="@+id/ll_hotword_change_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="?attr/bookshelf_item_press_bg"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换一换"
                android:textSize="16sp"
                android:textColor="?attr/search_history_clear_text_color"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height_0.5"
            android:background="?attr/color_divider"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_12"
            android:background="?attr/color_divider_item"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height_0.5"
            android:background="?attr/color_divider"/>

</LinearLayout>