<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:paddingTop="@dimen/search_hot_distance"
                android:paddingBottom="@dimen/search_hot_distance"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_hot"
            android:id="@+id/iv_type"/>

    <TextView
            android:id="@+id/tv_hotword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="热词"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_type"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#303135"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            />

</RelativeLayout>