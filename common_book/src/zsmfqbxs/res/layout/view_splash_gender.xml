<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="HardcodedText,RtlHardcoded">

    <TextView
        android:id="@+id/txt_gender_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/splash_gender_skip_sel"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="跳过"
        android:textColor="#666D77"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_gender_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="请选择你的性别"
        android:textColor="#282828"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/txt_gender_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender_skip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="即将进入..."
        android:textColor="@color/color_black"
        android:textSize="26sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_gender_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender_prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="我们会根据你的性别推荐热书"
        android:textColor="#989898"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/ll_gender_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender_prompt"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_gender_boy"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/splash_gender_boy_sel">

            <TextView
                android:id="@+id/txt_gender_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:text="@string/splash_boy"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/txt_gender_boy"
                android:layout_below="@id/txt_gender_boy"
                android:layout_marginTop="8dp"
                android:text="@string/splash_boy_type"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_gender_boy"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:contentDescription="@string/module_name"
                android:src="@drawable/splash_gender_boy_select_sel"/>

            <ImageView
                android:id="@+id/img_gender_boy_check"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@id/img_gender_boy"
                android:layout_alignRight="@id/img_gender_boy"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:contentDescription="@string/module_name"
                android:src="@drawable/splash_gender_boy_check_sel"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gender_girl"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/splash_gender_girl_sel">

            <TextView
                android:id="@+id/txt_gender_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:text="@string/splash_girl"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/txt_gender_girl"
                android:layout_below="@id/txt_gender_girl"
                android:layout_marginTop="8dp"
                android:text="@string/splash_girl_type"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_gender_girl"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:contentDescription="@string/module_name"
                android:src="@drawable/splash_gender_girl_select_sel"/>

            <ImageView
                android:id="@+id/img_gender_girl_check"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@id/img_gender_girl"
                android:layout_alignRight="@id/img_gender_girl"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:contentDescription="@string/module_name"
                android:src="@drawable/splash_gender_girl_check_sel"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>