<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_home_header"
             android:id="@+id/rl_home_header"
             android:layout_width="match_parent"
             android:layout_height="45dp"/>

    <RelativeLayout
        android:id="@+id/rl_web_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_home_header">

        <com.intelligent.reader.view.scroll.ScrollWebView
            android:id="@+id/web_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </RelativeLayout>

</RelativeLayout>
