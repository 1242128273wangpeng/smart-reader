<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/download_manager_more_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="@string/edit"
                android:textColor="#D9000000"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#99E6E6E6"/>

            <TextView
                android:id="@+id/txt_sort_update"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/download_manager_more_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="@string/sort_for_update_time"
                android:textColor="#D9000000"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#99E6E6E6"/>

            <TextView
                android:id="@+id/txt_sort_read"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/download_manager_more_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="@string/sort_for_reading_time"
                android:textColor="#D9000000"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
