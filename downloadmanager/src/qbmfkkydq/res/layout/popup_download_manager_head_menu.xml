<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/download_manager_head_menu_bg"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:layout_width="129dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_edit"
            style="@style/style_book_sort_item"
            android:background="@drawable/download_manager_head_menu_first_sel"
            android:soundEffectsEnabled="true"
            android:text="@string/edit_cache"/>

        <TextView
            android:id="@+id/txt_add_sorting"
            style="@style/style_book_sort_item"
            android:background="@drawable/download_manager_head_menu_second_sel"
            android:soundEffectsEnabled="true"
            android:text="@string/sort_for_add_time"/>

        <TextView
            android:id="@+id/txt_time_sorting"
            style="@style/style_book_sort_item"
            android:background="@drawable/download_manager_head_menu_second_sel"
            android:soundEffectsEnabled="true"
            android:text="@string/sort_for_update_time"/>

        <TextView
            android:id="@+id/txt_recent_read_sorting"
            style="@style/style_book_sort_item"
            android:background="@drawable/download_manager_head_menu_third_sel"
            android:soundEffectsEnabled="true"
            android:text="@string/sort_for_reading_time"/>
    </LinearLayout>

    <net.lzbook.kit.widget.NightShadowView
        android:layout_width="129dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        app:cornerRadius="5dp"/>

</FrameLayout>
