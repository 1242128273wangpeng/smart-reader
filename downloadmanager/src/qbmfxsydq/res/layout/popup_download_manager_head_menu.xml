<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/download_manager_head_menu_bg"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:background="@drawable/download_manager_head_menu_first_sel"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="@string/edit"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txt_time_sorting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/download_manager_head_menu_second_sel"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="@string/sort_for_update_time"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txt_recent_read_sorting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/download_manager_head_menu_third_sel"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="@string/sort_for_reading_time"
            android:textColor="@color/text_color_dark"
            android:textSize="13sp"/>
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cornerRadius="5dp"/>

</FrameLayout>
