<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/download_head_pop_edit"
                android:background="@drawable/download_manager_more_selector"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:text="@string/edit"
                android:soundEffectsEnabled="true"/>

        <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/download_head_pop_sort_time"
                android:background="@drawable/download_manager_more_selector"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:text="@string/sort_for_update_time"
                android:soundEffectsEnabled="true"/>

        <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/download_head_pop_sort_read"
                android:background="@drawable/download_manager_more_selector"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:text="@string/sort_for_reading_time"
                android:soundEffectsEnabled="true"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
