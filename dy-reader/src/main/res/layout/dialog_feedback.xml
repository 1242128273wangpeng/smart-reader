<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:scrollbars="vertical">
    
    <LinearLayout
            android:id="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/dialog_feedback_bg"
            android:orientation="vertical">
        
        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:padding="@dimen/padding_10"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#E6000000"
                android:textSize="20sp"/>

        <ScrollView
                android:id="@+id/sv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/feedback_checkboxs_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="当前章节为空、乱码"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_1"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="书籍缓存后无法阅读"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_2"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="章节或内容重复"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_3"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="章节顺序错误"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_4"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="内容错字、少字"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_5"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="段落排版内容"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_6"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="13dp"
                        android:paddingBottom="15dp"
                        android:gravity="center_vertical">

                    <TextView
                            style="@style/checkBox_feedback_txt_style"
                            android:text="缓存失败"/>

                    <CheckBox
                            android:id="@+id/feedback_rb_7"
                            style="@style/checkBox_feedback_btn_style"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eaeaea"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

            <Button
                    android:id="@+id/feedback_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/dialog_feedback_btn_left_selector"
                    android:textColor="#99000000"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="16sp"/>

            <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#eaeaea"/>

            <Button
                    android:id="@+id/feedback_submit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/dialog_feedback_btn_right_selector"
                    android:textColor="@color/color_brown_c2b282"
                    android:gravity="center"
                    android:text="提交"
                    android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
    
    <net.lzbook.kit.book.view.NightShadowView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/container"
            android:layout_alignRight="@+id/container"
            android:layout_alignBottom="@+id/container"
            android:layout_alignLeft="@+id/container"
            app:cornerRadius="4dp"
            />
</RelativeLayout>