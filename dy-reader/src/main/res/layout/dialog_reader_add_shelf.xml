<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/reader_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="提示"
            android:textColor="#323232"
            android:textSize="18sp"/>

        <include layout="@layout/dialog_divider"/>

        <TextView
            android:id="@+id/publish_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:padding="30dp"
            android:textColor="#323232"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/progress_del"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/change_source_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/change_source_bottom_divider"
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="#E8E8E8"/>
            
            <Button
                android:id="@+id/publish_stay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/change_source_bottom_divider"
                android:background="@drawable/reader_change_source_cancel_sel"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/reader_change_source_cancel_txt_sel"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/publish_leave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/change_source_bottom_divider"
                android:background="@drawable/reader_change_source_continue_sel"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@drawable/reader_change_source_continue_txt_sel"
                android:textSize="16sp"/>

            <include layout="@layout/dialog_divider"/>
        </RelativeLayout>
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/container"
        android:layout_alignLeft="@+id/container"
        android:layout_alignRight="@+id/container"
        android:layout_alignTop="@+id/container"
        android:visibility="gone"
        app:cornerRadius="4dp"/>
</RelativeLayout>