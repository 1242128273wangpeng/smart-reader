<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="标题"
            android:textColor="#323232"
            android:textSize="18sp"/>

        <include layout="@layout/dialog_divider"/>

        <TextView
            android:id="@+id/tv_update_info_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="6dp"
            android:text="@string/text_hint_info"
            android:textColor="#323232"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/cb_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="@dimen/margin_10"
            android:button="@drawable/reader_feedback_checkbox_sel"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="@string/text_no_hint"
            android:textColor="#777777"
            android:textSize="14sp"/>

        <RelativeLayout
            android:id="@+id/change_source_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/change_source_bottom_divider"
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="#E8E8E8"/>

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/change_source_bottom_divider"
                android:background="@drawable/reader_change_source_cancel_sel"
                android:gravity="center"
                android:text="@string/reading_original_web"
                android:textColor="@drawable/reader_change_source_cancel_txt_sel"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/change_source_bottom_divider"
                android:background="@drawable/reader_change_source_continue_sel"
                android:gravity="center"
                android:text="@string/reading_continue"
                android:textColor="@drawable/reader_change_source_continue_txt_sel"
                android:textSize="16sp"/>

            <include layout="@layout/dialog_divider"/>
        </RelativeLayout>
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/container"
        android:layout_alignLeft="@+id/container"
        android:layout_alignRight="@+id/container"
        android:layout_alignTop="@+id/container"
        android:visibility="gone"
        app:cornerRadius="4dp"/>
</RelativeLayout>