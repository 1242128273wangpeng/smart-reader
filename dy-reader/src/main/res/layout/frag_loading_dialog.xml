<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_loading_content"
        android:layout_width="217dp"
        android:layout_height="122dp"
        android:background="@drawable/reader_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_anim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/loading_anim"/>

        <TextView
            android:id="@+id/txt_loading_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/reader_loading_prompt"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reload_content"
        android:layout_width="217dp"
        android:layout_height="122dp"
        android:background="@drawable/reader_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/reader_reload_icon"/>

        <TextView
            android:id="@+id/txt_reload_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/reader_reload_prompt"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

    </LinearLayout>


</RelativeLayout>