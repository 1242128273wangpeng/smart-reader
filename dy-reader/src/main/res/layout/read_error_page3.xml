<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <RelativeLayout
            android:id="@+id/loading_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whole_bg">

        <TextView
                android:id="@+id/tv_loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="14dp"
                android:shadowColor="@color/white"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/whole_text"
                android:text="@string/loading_read_page"
                android:textSize="16sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_loading_progress"
                android:layout_centerInParent="true"
                android:orientation="vertical">

            <ProgressBar
                    android:id="@+id/loading_progressbar"
                    style="@style/CircleProgressBar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDuration="1000"
                    android:layout_gravity="center"/>

            <TextView
                    android:id="@+id/tv_novel_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_width_15"
                    android:layout_marginRight="@dimen/dimen_width_15"
                    android:layout_marginTop="@dimen/dimen_width_15"
                    android:gravity="center"
                    android:textColor="@color/color_loading_868686"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            <TextView
                    android:visibility="gone"
                    android:id="@+id/loading_progress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:textColor="@color/color_loading_868686"
                    android:textSize="14sp"
                    android:text="@string/loading_read_page"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/loading_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_ffffff"
            android:visibility="gone"
            android:gravity="center">

        <ImageView
                android:id="@+id/iv_network_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_network_error"/>

        <TextView
                android:id="@+id/tv_network_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:gravity="center"
                android:layout_below="@+id/iv_network_error"
                android:text="@string/read_network_error"
                android:textColor="@color/color_gray_9b9b9b"
                android:textSize="@dimen/dimen_text_14"/>

        <LinearLayout
                android:id="@+id/loading_error_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/tv_network_error"
                android:gravity="center">

            <TextView
                    android:id="@+id/loading_error_reload"
                    android:layout_width="131dp"
                    android:layout_height="31dp"
                    android:background="@drawable/bookshelf_delete_cancel_bg"
                    android:gravity="center"
                    android:text="@string/network_error_retry"
                    android:textColor="@drawable/bookshelf_delete_cancel_text_color"
                    android:textSize="@dimen/dimen_text_14"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>