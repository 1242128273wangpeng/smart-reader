<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/read_option_popmore_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read_option_pop_change_source"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/read_option_pop_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="换源"
            android:textColor="@color/reading_setting_text_color"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/read_option_pop_feedback"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/read_option_pop_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="反馈"
            android:textColor="@color/reading_setting_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/read_option_pop_info"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/read_option_pop_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:soundEffectsEnabled="true"
            android:text="书籍详情"
            android:textColor="@color/color_gray_d3d3d3"
            android:textSize="12sp"
            />
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
        android:id="@+id/nightShadowView"
        android:layout_width="120dp"
        android:layout_height="135dp"
        android:visibility="gone"
        app:cornerRadius="3dp"/>
</FrameLayout>