<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="reader_feedback_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="reader_feedback_check_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:clickable">false</item>
        <item name="android:button">@drawable/reader_feedback_checkbox_sel</item>
    </style>

    <style name="reader_circle_progress_bar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/reader_loading_progress_bg</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

</resources>