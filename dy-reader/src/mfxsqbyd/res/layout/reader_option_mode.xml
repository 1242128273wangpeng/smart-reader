<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_reader_mode"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#212223"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24dp"
            android:text="@string/read_mode_title"
            android:textColor="@color/reading_setting_text_color"
            android:textSize="@dimen/text_size_12"/>

        <RadioGroup
            android:id="@+id/rg_reader_animation_group"
            android:layout_width="match_parent"
            android:layout_height="32.4dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_reader_animation_slide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_read_option_group_border"
                android:button="@null"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/read_pagemode_slide"
                android:textColor="@drawable/reader_option_group_txt_sel"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rbtn_reader_animation_simulation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_read_option_group_border"
                android:button="@null"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/read_pagemode_fangzhen"
                android:textColor="@drawable/reader_option_group_txt_sel"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rbtn_reader_animation_translation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_read_option_group_border"
                android:button="@null"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/read_pagemode_translation"
                android:textColor="@drawable/reader_option_group_txt_sel"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rbtn_reader_animation_up_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_read_option_group_border"
                android:button="@null"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="@string/read_pagemode_updown"
                android:textColor="@drawable/reader_option_group_txt_sel"
                android:textSize="12sp"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="@dimen/dimen_margin_32"
        android:layout_marginRight="@dimen/dimen_margin_32"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ckb_reader_auto_read"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/reader_option_autoread_icon"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/read_mode_auto"
            android:textColor="@color/reading_setting_text_color"
            android:textSize="@dimen/text_size_14"
            />

        <CheckBox
            android:id="@+id/ckb_reader_landscape"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/reader_option_landscape_icon"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/read_landscape_or_portrait"
            android:textColor="@drawable/reader_option_txt_check_color"
            android:textSize="@dimen/text_size_14"
            />

        <CheckBox
            android:id="@+id/ckb_reader_full_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/reader_option_full_icon"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/read_mode_full"
            android:textColor="@drawable/reader_option_txt_check_color"
            android:textSize="@dimen/text_size_14"
            />
    </LinearLayout>
</LinearLayout>