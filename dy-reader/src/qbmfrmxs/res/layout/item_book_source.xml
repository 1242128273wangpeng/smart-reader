<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_source_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/txt_source_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="@string/source_new"
        android:textColor="#FF5D646E"
        android:textSize="@dimen/text_size_normal"/>

    <TextView
        android:id="@+id/txt_source_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_source_chapter"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF858C96"
        android:textSize="11sp"
        tools:text="@string/default_title"/>

    <TextView
        android:id="@+id/txt_source_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_source_chapter"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="#FF858C96"
        android:textSize="11sp"
        tools:text="@string/default_title"/>

</RelativeLayout>