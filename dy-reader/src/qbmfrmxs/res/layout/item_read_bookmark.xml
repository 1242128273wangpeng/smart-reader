<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmark_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/item_bookmark_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20.5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#616161"
        android:textSize="@dimen/text_size_large"
        tools:text="name"/>

    <TextView
        android:id="@+id/item_bookmark_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_bookmark_title"
        android:layout_marginBottom="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#989898"
        android:textSize="@dimen/text_size_normal"
        tools:text="说明"/>


    <TextView
        android:id="@+id/item_bookmark_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_bookmark_desc"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#B9B9B9"
        android:textSize="11sp"
        tools:text="更新"/>

    <TextView
        android:id="@+id/item_bookmark_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_bookmark_desc"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#B9B9B9"
        android:textSize="11sp"
        android:text="@string/delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/item_bookmark_delete"
        android:background="#F1F1F1"/>

</RelativeLayout>