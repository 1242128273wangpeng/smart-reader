<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded, MissingPrefix, RtlSymmetry">

    <RelativeLayout
        android:id="@+id/ll_head_option"
        android:layout_width="wrap_content"
        android:fitsSystemWindows="true"
        android:background="#E6191C1F"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/img_reader_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/module_name"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:src="@drawable/reader_option_back_icon"
                app:onPressChangeAlpha="true"/>

            <ImageButton
                android:id="@+id/ibtn_reader_download"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ibtn_reader_more"
                android:background="@null"
                android:contentDescription="@string/module_name"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reader_option_download_icon"
                app:onPressChangeAlpha="true"/>

            <ImageButton
                android:id="@+id/ibtn_reader_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:background="@null"
                android:contentDescription="@string/module_name"
                android:padding="5dp"
                android:src="@drawable/reader_option_more_icon"
                app:onPressChangeAlpha="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_bookshelf"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_head_option"
        android:layout_marginTop="30dp"
        android:background="@drawable/reader_option_add_bookshelf_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/reader_option_add_bookshelf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/add_bookshelf"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <net.lzbook.kit.book.view.NightShadowView
        android:id="@+id/night_shadow_add_bookshelf"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_head_option"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:cornerBottomLeftRadius="45dp"
        app:cornerTopLeftRadius="45dp"/>

    <net.lzbook.kit.book.view.NightShadowView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"/>
</RelativeLayout>