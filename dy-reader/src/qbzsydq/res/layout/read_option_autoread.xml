<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/read_option_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/autoreading_divide0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_reading_divide"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp">

        <TextView
            android:id="@+id/autoread_label"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingRight="8dp"
            android:text="@string/read_auto_speed"
            android:textColor="@color/color_gray_707070"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/autoread_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#ce3d3e"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/read_speed_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/autoread_down"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_margin_16"
            android:layout_marginRight="@dimen/dimen_margin_16"
            android:layout_weight="1"
            android:background="@drawable/read_option_autoread_btn_bg"
            android:gravity="center"
            android:text="@string/read_speedless"
            android:textColor="@color/read_option_txt_color_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/autoread_up"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_margin_16"
            android:layout_marginRight="@dimen/dimen_margin_16"
            android:layout_weight="1"
            android:background="@drawable/read_option_autoread_btn_bg"
            android:gravity="center"
            android:text="@string/read_speedfull"
            android:textColor="@color/read_option_txt_color_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/autoread_stop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_margin_14"
        android:layout_marginLeft="@dimen/dimen_margin_16"
        android:layout_marginRight="@dimen/dimen_margin_16"
        android:layout_marginTop="@dimen/dimen_margin_14"
        android:background="@drawable/read_option_autoread_btn_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/read_option_txt_color_selector"
        android:textSize="14sp" />
</LinearLayout>