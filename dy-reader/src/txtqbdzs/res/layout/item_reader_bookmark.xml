<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
        android:id="@+id/txt_bookmark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_title"
        android:textColor="#282828"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_bookmark_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bookmark_title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_message"
        android:textColor="#989898"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txt_bookmark_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bookmark_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_title"
        android:textColor="#CBCBCB"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_below="@+id/txt_bookmark_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/reader_catalog_mark_icon"/>

    <TextView
        android:id="@+id/txt_delete_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_bookmark_content"
        android:layout_marginTop="9dp"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:text="@string/delete"
        android:textColor="#CBCBCB"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt_bookmark_time"
        android:background="#F4F4F4"/>

</RelativeLayout>