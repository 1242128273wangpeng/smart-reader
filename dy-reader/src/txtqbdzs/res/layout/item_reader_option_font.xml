<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_reader_setting_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#212020"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            style="@style/reader_text_style"
            android:text="@string/default_font"/>

        <Button
            android:id="@+id/btn_font_default"
            style="@style/reader_option_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/use"/>

        <TextView
            android:id="@+id/txt_font_default"
            style="@style/reader_text_style"
            android:layout_toLeftOf="@id/btn_font_default"
            android:layout_toStartOf="@id/btn_font_default"
            tools:text="3.1M"/>

        <LinearLayout
            style="@style/reader_option_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_current_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon"
                android:src="@drawable/read_font_using"/>
        </LinearLayout>

    </RelativeLayout>

    <View style="@style/reader_line_style"/>


</LinearLayout>
