<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bookshelf__item_press_bg">


    <RelativeLayout
        android:id="@+id/frame"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_shadow"

            android:layout_width="35dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="46dp"
            android:scaleType="fitXY"
            android:src="@drawable/search_shadow"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/search_label_icon"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_search_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxEms="15"
        android:ellipsize="end"
        android:textSize="14sp"
        android:text="默默"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:layout_toRightOf="@+id/frame"/>

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_writer"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_search_item_2"/>


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:src="@drawable/search_enter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>