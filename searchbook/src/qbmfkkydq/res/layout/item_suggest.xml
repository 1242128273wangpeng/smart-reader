<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:Tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/draw_item_press_bg"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/dimen_margin_16"
              android:paddingRight="@dimen/dimen_margin_16"
              android:paddingStart="@dimen/dimen_margin_16">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:contentDescription="@string/icon"
        android:scaleType="center"
        android:src="@drawable/search_icon_personal"/>

    <TextView
        android:id="@+id/tv_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:textSize="14sp"
        Tools:text="默默"/>

</LinearLayout>