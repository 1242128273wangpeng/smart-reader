<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contain"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#fafafa"
    android:focusableInTouchMode="true"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        style="@style/style_text_normal_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/search_history"/>

    <TextView
        android:id="@+id/txt_delete_his"
        style="@style/style_text_normal_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/search_history_delete"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/search_history_delete"
        android:text="@string/clear_history_record"/>

</RelativeLayout>