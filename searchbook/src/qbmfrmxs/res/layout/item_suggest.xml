<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/draw_item_press_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/rl_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/img_shadow"
            android:layout_width="35dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon"
            android:scaleType="fitXY"
            android:src="@drawable/search_shadow"/>

        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/icon"
            android:scaleType="center"
            android:src="@drawable/search_label_icon"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:layout_marginStart="@dimen/dimen_margin_7"
        android:layout_toEndOf="@+id/rl_contain"
        android:layout_toRightOf="@+id/rl_contain"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:textSize="14sp"
        tools:text="默默"/>

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:layout_marginRight="16dp"
        android:layout_marginStart="@dimen/dimen_margin_7"
        android:contentDescription="@string/icon"
        android:src="@drawable/search_writer"/>

</RelativeLayout>