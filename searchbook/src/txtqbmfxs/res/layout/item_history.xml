<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/draw_search_input_bg"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/history_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="center"
        android:src="@drawable/search_time"/>

    <TextView
        android:id="@+id/history_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_margin_7"
        android:layout_toRightOf="@id/history_img"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="默默"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/history_clear"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_margin_16"
        android:scaleType="center"
        android:src="@drawable/search_history_clear"/>

</RelativeLayout>