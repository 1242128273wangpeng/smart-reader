<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical">

    <include
        android:id="@+id/view_top_tip"
        layout="@layout/in_favorite_result"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="加载中"
                android:textColor="#0F0014"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="作者:xxxx"
                android:textColor="#575757"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txt_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.1"
                android:lines="2"
                android:text="加载中"
                android:textColor="#5D646E"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_latest_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_latest_chapter_bg"
                android:padding="8dp"
                android:visibility="gone"
                android:text="最新章节:xxxxxx"
                android:textColor="#212832"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_source_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:text="source"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/txt_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="更新时间:"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#bfbfbf"/>
    </LinearLayout>
</LinearLayout>